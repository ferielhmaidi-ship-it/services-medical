{% extends 'admin/base.html.twig' %}

{% block title %}Magazine{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'admin/magazine/_styles.html.twig' %}
{% endblock %}

{% block body_class %}magazine-page{% endblock %}

{% block body %}
    <section class="mag-shell">
        <div class="container">
            <div class="mag-header">
                <div>
                    <h1 class="mag-title">{{ magazine.title }}</h1>
                    <p class="mag-subtitle">Magazine details and metadata.</p>
                </div>
                <div class="mag-actions">
                    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_magazine_edit', {'id': magazine.id}) }}">
                        <i class="bi bi-pencil me-1"></i>
                        Edit
                    </a>
                    <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_magazine_index') }}">
                        Back to list
                    </a>
                </div>
            </div>

            <div class="mag-card">
                <div class="row g-4">
                    <div class="col-lg-8">
                        <div class="mb-3">
                            <div class="text-uppercase text-muted small">Description</div>
                            <div class="fw-semibold text-dark">{{ magazine.description }}</div>
                        </div>
                        <div class="d-flex flex-wrap gap-3">
                            <div class="mag-kpi">
                                <i class="bi bi-calendar3"></i>
                                <span>{{ magazine.dateCreate ? magazine.dateCreate|date('Y-m-d') : 'â€”' }}</span>
                            </div>
                            <div class="mag-kpi">
                                <i class="bi bi-flag"></i>
                                <span class="mag-badge">{{ magazine.statut }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="text-uppercase text-muted small">Cover image</div>
                        {% if magazine.image %}
                            <div class="mt-2">
                                <a class="mag-link" href="{{ magazine.image }}" target="_blank" rel="noreferrer">Open image</a>
                            </div>
                        {% else %}
                            <div class="text-muted mt-2">No image provided.</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="mag-card mt-4 d-flex align-items-center justify-content-between">
                <span class="text-muted">Remove this magazine permanently.</span>
                {{ include('magazine/_delete_form.html.twig') }}
            </div>
        </div>
    </section>
{% endblock %}
