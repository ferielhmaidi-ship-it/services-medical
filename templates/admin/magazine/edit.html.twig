{% extends 'admin/base.html.twig' %}

{% block title %}Edit Magazine{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'admin/magazine/_styles.html.twig' %}
{% endblock %}

{% block body_class %}magazine-page{% endblock %}

{% block body %}
    <section class="mag-shell">
        <div class="container">
            <div class="mag-header">
                <div>
                    <h1 class="mag-title">Edit magazine</h1>
                    <p class="mag-subtitle">Update content, cover image, or status.</p>
                </div>
                <a class="mag-link" href="{{ path('app_magazine_index') }}">
                    <i class="bi bi-arrow-left me-2"></i>
                    Back to list
                </a>
            </div>

            <div class="mag-card mag-form mb-4">
                {{ include('magazine/_form.html.twig', {'button_label': 'Update'}) }}
            </div>

            <div class="mag-card d-flex align-items-center justify-content-between">
                <span class="text-muted">Remove this magazine permanently.</span>
                {{ include('magazine/_delete_form.html.twig') }}
            </div>
        </div>
    </section>
{% endblock %}
