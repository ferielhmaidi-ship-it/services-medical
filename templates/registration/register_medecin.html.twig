<!-- Select2 JS for searchable dropdown -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
// Client-side validation, CIN masking and Select2 initialization
(function () {
    'use strict'

    const forms = document.querySelectorAll('.needs-validation')

    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })

    // Real-time CIN validation
    const cinInput = document.getElementById('{{ registrationForm.cin.vars.id }}');
    if (cinInput) {
        cinInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 8) {
                value = value.substr(0, 8);
            }
            e.target.value = value;
        });
    }

    // Initialize Select2 for specialty dropdown
    const specialtySelect = document.querySelector('.select2-specialty');
    if (specialtySelect) {
        $(specialtySelect).select2({
            theme: 'bootstrap4',
            placeholder: 'Sélectionnez votre spécialité *',
            allowClear: true,
            width: '100%',
            dropdownParent: $(specialtySelect).parent(),
            templateResult: function(data) {
                if (!data.id) {
                    return data.text;
                }

                const specialty = data.text;
                let group = '';

                if (specialty.includes('Chirurgie')) {
                    group = '<small class="text-muted">Chirurgicale</small> ';
                } else if (specialty.includes('Biologie') || specialty.includes('Biochimie')) {
                    group = '<small class="text-muted">Laboratoire</small> ';
                } else if (specialty === 'Dentiste') {
                    group = '<small class="text-muted">Dentisterie</small> ';
                }

                return $('<span>' + group + data.text + '</span>');
            }
        });

        $(specialtySelect).on('change', function() {
            $(this).valid();
        });
    }
})();
</script>
