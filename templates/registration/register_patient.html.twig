{% extends 'base.html.twig' %}

{% block title %}Inscription Patient - TabibNet{% endblock %}

{% block body_class %}register-page{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* ===== ORIGINAL STYLES (PRESERVED) ===== */
        .required-field::after {
            content: " *";
            color: #dc3545;
        }
        .form-text.help-text {
            font-size: 0.85rem;
            color: #6c757d;
        }
        /* Hide the default date picker arrow and style */
        input[type="date"]::-webkit-calendar-picker-indicator {
            background: transparent;
            bottom: 0;
            color: transparent;
            cursor: pointer;
            height: auto;
            left: 0;
            position: absolute;
            right: 0;
            top: 0;
            width: auto;
        }
        .date-input-wrapper {
            position: relative;
        }

        /* ===== TABIBNET MODERN STYLES (ADDED) ===== */
        .register-page {
            background-color: #f8fafc;
        }

        .register-hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 100px 0;
            position: relative;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
        }

        .register-hero .bg-blur-1 {
            position: absolute;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background: rgba(102, 126, 234, 0.1);
            filter: blur(60px);
            top: -150px;
            right: -150px;
        }

        .register-hero .bg-blur-2 {
            position: absolute;
            width: 400px;
            height: 400px;
            border-radius: 50%;
            background: rgba(118, 75, 162, 0.1);
            filter: blur(80px);
            bottom: -200px;
            left: -200px;
        }

        .register-card {
            border-radius: 24px;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .register-card:hover {
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15) !important;
        }

        .bg-primary-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .input-group-lg .input-group-text {
            padding: 0.75rem 1.25rem;
            border: 1px solid #e0e0e0;
            border-right: none;
            border-radius: 12px 0 0 12px;
            background: #f8fafc;
        }

        .input-group-lg .form-control,
        .input-group-lg .form-select {
            padding: 0.75rem 1.25rem;
            border: 1px solid #e0e0e0;
            border-left: none;
            border-radius: 0 12px 12px 0;
            background: #f8fafc;
            transition: all 0.3s ease;
        }

        .input-group-lg .form-control:focus,
        .input-group-lg .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
            background: white;
        }

        .form-check-input {
            width: 1.2em;
            height: 1.2em;
            border-radius: 0.3em;
            border: 2px solid #d1d5db;
            transition: all 0.2s ease;
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        .btn-outline-secondary {
            border: 2px solid #6c757d;
            color: #6c757d;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            background: #6c757d;
            color: white;
            border-color: #6c757d;
            transform: translateY(-2px);
        }

        .alert-danger {
            background: rgba(220, 38, 38, 0.1);
            border: 1px solid rgba(220, 38, 38, 0.2);
            color: #dc2626;
            border-radius: 12px;
        }

        .alert-info {
            background: rgba(102, 126, 234, 0.1);
            border: 1px solid rgba(102, 126, 234, 0.2);
            color: #1e40af;
            border-radius: 12px;
        }

        @media (max-width: 768px) {
            .register-hero {
                padding: 80px 0;
            }
            .register-card .card-body {
                padding: 1.5rem !important;
            }
            .btn-lg {
                padding: 0.75rem 1.25rem;
                font-size: 1rem;
            }
        }

        @media (max-width: 576px) {
            .d-flex.gap-3 {
                flex-direction: column;
            }
            .btn-lg {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
<!-- Hero Section with Gradient Background -->
<section class="register-hero section position-relative overflow-hidden">
    <div class="container position-relative z-2">
        <div class="row justify-content-center">
            <div class="col-lg-10" data-aos="fade-up">
                <!-- Main Card -->
                <div class="card border-0 shadow-lg register-card">
                    <!-- Header with gradient -->
                    <div class="card-header bg-primary-gradient text-white border-0 py-4">
                        <div class="d-flex align-items-center">
                            <div class="header-icon me-3">
                                <i class="fas fa-user-injured fa-2x"></i>
                            </div>
                            <div>
                                <h2 class="h3 mb-1 fw-bold">Inscription Patient</h2>
                                <p class="mb-0 opacity-90">Créez votre compte pour gérer votre santé et prendre rendez-vous</p>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4 p-lg-5">
                        {% for flash_error in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show border-0 bg-danger bg-opacity-10" role="alert">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-exclamation-circle me-3 text-danger" style="font-size: 1.2rem;"></i>
                                    <div>
                                        <strong>Erreur</strong><br>
                                        <small>{{ flash_error }}</small>
                                    </div>
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(registrationForm, {
                            attr: {
                                'class': 'row g-4 needs-validation',
                                'novalidate': 'novalidate',
                                'data-turbo': 'false'
                            }
                        }) }}

                            <!-- Email and Phone -->
                            <div class="col-md-6">
                                {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'form-label fw-semibold required-field'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-envelope text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.email, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'placeholder': 'votre@email.com'
                                    }}) }}
                                </div>
                                <div class="form-text help-text">{{ form_help(registrationForm.email) }}</div>
                            </div>

                            <div class="col-md-6">
                                {{ form_label(registrationForm.phoneNumber, 'Téléphone', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-phone text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.phoneNumber, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'placeholder': '+216 XX XXX XXX'
                                    }}) }}
                                </div>
                                <div class="form-text help-text">{{ form_help(registrationForm.phoneNumber) }}</div>
                            </div>

                            <!-- First Name and Last Name -->
                            <div class="col-md-6">
                                {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'form-label fw-semibold required-field'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-user text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.firstName, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'placeholder': 'Ahmed'
                                    }}) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'form-label fw-semibold required-field'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-user text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.lastName, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'placeholder': 'Ben Ali'
                                    }}) }}
                                </div>
                            </div>

                            <!-- Age, Gender, Date of Birth -->
                            <div class="col-md-4">
                                {{ form_label(registrationForm.age, 'Âge', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-birthday-cake text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.age, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'placeholder': '25'
                                    }}) }}
                                </div>
                                <div class="form-text help-text">{{ form_help(registrationForm.age) }}</div>
                            </div>

                            <div class="col-md-4">
                                {{ form_label(registrationForm.gender, 'Genre', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-venus-mars text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.gender, {'attr': {
                                        'class': 'form-select border-start-0 bg-light'
                                    }}) }}
                                </div>
                            </div>

                            <div class="col-md-4 date-input-wrapper">
                                {{ form_label(registrationForm.dateOfBirth, 'Date de naissance', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-calendar-alt text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.dateOfBirth, {'attr': {
                                        'class': 'form-control border-start-0 bg-light'
                                    }}) }}
                                </div>
                                <div class="form-text help-text">{{ form_help(registrationForm.dateOfBirth) }}</div>
                            </div>

                            <!-- Address -->
                            <div class="col-12">
                                {{ form_label(registrationForm.address, 'Adresse', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0 align-self-start">
                                        <i class="fas fa-home text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.address, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'rows': 3,
                                        'placeholder': 'Votre adresse complète'
                                    }}) }}
                                </div>
                                <div class="form-text help-text">{{ form_help(registrationForm.address) }}</div>
                            </div>

                            <!-- Insurance checkbox -->
                            <div class="col-12 mt-3">
                                <div class="form-check">
                                    {{ form_widget(registrationForm.hasInsurance, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(registrationForm.hasInsurance, 'Je dispose d\'une assurance médicale', {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>

                            <!-- Insurance number (hidden by default) -->
                            <div class="col-12" id="insurance-number-field">
                                {{ form_label(registrationForm.insuranceNumber, 'Numéro d\'assurance', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-id-card text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.insuranceNumber, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'placeholder': 'Numéro de carte d\'assurance'
                                    }}) }}
                                </div>
                                <div class="form-text help-text">{{ form_help(registrationForm.insuranceNumber) }}</div>
                            </div>

                            <hr class="my-4">

                            <!-- Password Section -->
                            <div class="col-12">
                                <h5 class="fw-bold text-primary mb-3">
                                    <i class="fas fa-lock me-2"></i>Mot de passe
                                </h5>
                            </div>

                            <div class="col-md-6">
                                {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'form-label fw-semibold required-field'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-key text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'placeholder': '••••••••'
                                    }}) }}
                                </div>
                                {{ form_errors(registrationForm.plainPassword.first) }}
                            </div>

                            <div class="col-md-6">
                                {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'form-label fw-semibold required-field'}}) }}
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-key text-primary"></i>
                                    </span>
                                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {
                                        'class': 'form-control border-start-0 bg-light',
                                        'placeholder': '••••••••'
                                    }}) }}
                                </div>
                                {{ form_errors(registrationForm.plainPassword.second) }}
                            </div>

                            <!-- Terms Agreement -->
                            <div class="col-12 mt-3">
                                <div class="form-check">
                                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions générales d\'utilisation et la politique de confidentialité', {'label_attr': {'class': 'form-check-label'}}) }}
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                </div>
                            </div>

                            <!-- Important Info Alert -->
                            <div class="col-12 mt-4">
                                <div class="alert alert-info border-0">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-info-circle me-3 text-primary" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <h6 class="alert-heading fw-bold mb-2">Important</h6>
                                            <p class="mb-0 small">
                                                Vous pourrez vous connecter immédiatement après votre inscription.
                                                Conservez vos identifiants de connexion en lieu sûr.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Buttons -->
                            <div class="col-12 mt-4">
                                <div class="d-flex flex-wrap gap-3 align-items-center justify-content-between">
                                    <button type="submit" class="btn btn-primary btn-lg px-5">
                                        <i class="fas fa-user me-2"></i>S'inscrire comme Patient
                                    </button>
                                    <a href="{{ path('register_choice') }}" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-arrow-left me-2"></i>Retour
                                    </a>
                                </div>
                            </div>

                        {{ form_end(registrationForm) }}
                    </div>

                    <div class="card-footer bg-white text-center py-3 border-0">
                        <p class="mb-0 text-muted">
                            Déjà inscrit ?
                            <a href="{{ path('app_login') }}" class="fw-bold text-primary text-decoration-none">
                                Connectez-vous <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Background blur decoration -->
    <div class="position-absolute top-0 start-0 w-100 h-100 z-1">
        <div class="bg-blur-1"></div>
        <div class="bg-blur-2"></div>
    </div>
</section>

<script>
// Client-side validation + insurance number toggle
(function () {
    'use strict'

    const forms = document.querySelectorAll('.needs-validation')

    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }

            form.classList.add('was-validated')
        }, false)
    })

    // Show/hide insurance number based on checkbox
    const insuranceCheckbox = document.querySelector('input[name="{{ registrationForm.hasInsurance.vars.full_name }}"]');
    const insuranceNumberField = document.getElementById('insurance-number-field');

    function toggleInsuranceField() {
        if (insuranceCheckbox.checked) {
            insuranceNumberField.style.display = 'block';
        } else {
            insuranceNumberField.style.display = 'none';
        }
    }

    if (insuranceCheckbox && insuranceNumberField) {
        // Initial state
        toggleInsuranceField();

        // Add change listener
        insuranceCheckbox.addEventListener('change', toggleInsuranceField);
    }
})()
</script>
{% endblock %}
