{% extends 'base.html.twig' %}

{% block title %}Recherche d'articles | TabibNet{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/magazine.css') }}">
{% endblock %}

{% block body %}
<section class="mag-hero">
  <div class="container">
    <div class="mag-hero__content">
      <span class="mag-kicker">Recherche globale</span>
      <h1>Rechercher des articles</h1>
      <p>Trouvez des articles médicaux dans tous nos magazines.</p>
      
      <form action="{{ path('front_articles_search') }}" method="get" class="mag-search-form">
        <div class="autocomplete-wrapper">
          <div class="mag-search-group">
            <input type="text" id="article-search-input" name="search" placeholder="Rechercher un article..." value="{{ searchTerm }}" class="mag-search-input" autocomplete="off" autofocus>
            <button type="submit" class="mag-search-btn">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
            </button>
          </div>
          <div id="article-autocomplete-results" class="autocomplete-results"></div>
        </div>
        {% if searchTerm %}
          <div class="mag-search-results">
            {{ articles|length }} résultat(s) pour "{{ searchTerm }}" <a href="{{ path('front_articles_search') }}" class="mag-search-clear">Effacer</a>
          </div>
        {% endif %}
      </form>
    </div>
  </div>
</section>

<section class="mag-section">
  <div class="container">
    {% if searchTerm %}
      {% if articles|length > 0 %}
        <div class="mag-articles">
          {% for article in articles %}
            <article class="article-card">
              <div class="article-card__body">
                <div class="article-card__meta">
                  <span>{{ article.auteur }}</span>
                  <span>•</span>
                  <span>{{ article.datePub|date('d/m/Y') }}</span>
                </div>
                <h3>{{ article.title }}</h3>
                <p>
                  {% if article.resume %}
                    {{ article.resume|slice(0, 180) }}{% if article.resume|length > 180 %}...{% endif %}
                  {% endif %}
                </p>
                <div class="article-magazine-link">
                  <span class="mag-kicker">{{ article.magazine.title }}</span>
                </div>
              </div>
              <div class="article-card__footer">
                <span class="article-tag">{{ article.statut|default('Article') }}</span>
              </div>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <div class="mag-empty">
          Aucun article trouvé pour "{{ searchTerm }}".
        </div>
      {% endif %}
    {% else %}
      <div class="mag-empty" style="background: #e7f5fb; border-color: #b3e0f2; color: #1f7aa8;">
        Entrez un mot-clé pour commencer la recherche.
      </div>
    {% endif %}
  </div>
</section>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/autocomplete.js') }}"></script>
{% endblock %}
