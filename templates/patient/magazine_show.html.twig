{% extends 'base.html.twig' %}

{% block title %}{{ magazine.title }} | TabibNet{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/magazine.css') }}">
{% endblock %}

{% block body %}
<section class="mag-detail">
  <div class="container">
    <div class="mag-detail__header">
      <div class="mag-detail__text">
        <span class="mag-kicker">Magazine</span>
        <h1>{{ magazine.title }}</h1>
        <p>{{ magazine.description }}</p>

        <form action="{{ path('front_magazine_show', {id: magazine.id}) }}" method="get" class="mag-search-form-small">
          <div class="autocomplete-wrapper">
            <div class="mag-search-group">
              <input type="text" id="magazine-article-search-input" name="search" placeholder="Filtrer les articles..." value="{{ searchTerm }}" class="mag-search-input" autocomplete="off">
              <button type="submit" class="mag-search-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
              </button>
            </div>
            <div id="magazine-article-autocomplete-results" class="autocomplete-results"></div>
          </div>
          {% if searchTerm %}
            <div class="mag-search-results">
              Filtre : "{{ searchTerm }}" <a href="{{ path('front_magazine_show', {id: magazine.id}) }}" class="mag-search-clear">Annuler</a>
            </div>
          {% endif %}
        </form>
      </div>
      <div class="mag-detail__media">
        {% if magazine.image %}
          <img src="{{ asset('uploads/' ~ magazine.image) }}" alt="{{ magazine.title }}">
        {% else %}
          <div class="mag-card__placeholder">Sans image</div>
        {% endif %}
      </div>
    </div>

    <div class="mag-articles__header">
      <h2>Articles récents</h2>
      <span class="mag-count">{{ articles|length }} article(s)</span>
    </div>

    <div class="mag-articles">
      {% for article in articles %}
        <article class="article-card">
          <div class="article-card__body">
            <div class="article-card__meta">
              <span>{{ article.auteur }}</span>
              <span>•</span>
              <span>{{ article.datePub|date('d/m/Y') }}</span>
            </div>
            <h3>{{ article.title }}</h3>
            <p>
              {% if article.resume %}
                {{ article.resume|slice(0, 180) }}{% if article.resume|length > 180 %}...{% endif %}
              {% endif %}
            </p>
          </div>
          <div class="article-card__footer">
            <span class="article-tag">{{ article.statut|default('Article') }}</span>
          </div>
        </article>
      {% else %}
        <div class="mag-empty">
          Aucun article pour ce magazine.
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/autocomplete.js') }}"></script>
{% endblock %}
