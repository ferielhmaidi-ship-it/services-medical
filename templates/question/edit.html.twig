{% extends 'base.html.twig' %}

{% block title %}Modifier Question{% endblock %}

{% block body %}
<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        --primary-hover: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        --surface: #ffffff;
        --bg: #f8fafc;
        --text: #1e293b;
        --muted: #64748b;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 6px 18px rgba(17, 24, 39, 0.08);
        --shadow-lg: 0 18px 36px rgba(17, 24, 39, 0.12);
        --shadow-glow: 0 0 24px rgba(124, 58, 237, 0.2);
    }

    .form-page {
        min-height: 100vh;
        background: linear-gradient(180deg, var(--bg) 0%, #f1f5f9 100%);
        padding: 56px 0 88px;
        position: relative;
        overflow: hidden;
    }

    .form-page::before {
        content: '';
        position: absolute;
        top: -35%;
        left: -15%;
        width: 120%;
        height: 90%;
        background: radial-gradient(ellipse at top, rgba(124, 58, 237, 0.06) 0%, transparent 70%);
        pointer-events: none;
    }

    .form-container {
        position: relative;
        z-index: 1;
    }

    .form-card {
        background: var(--surface);
        border: 1px solid #e2e8f0;
        border-radius: 20px;
        box-shadow: var(--shadow-md);
        padding: 36px;
        animation: slideUp 0.5s ease-out;
    }

    @keyframes slideUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .form-header {
        margin-bottom: 32px;
        position: relative;
    }

    .form-header::after {
        content: '';
        position: absolute;
        bottom: -14px;
        left: 0;
        width: 56px;
        height: 3px;
        background: var(--primary-gradient);
        border-radius: 2px;
    }

    .form-title {
        font-size: clamp(26px, 4vw, 32px);
        font-weight: 800;
        color: var(--text);
        margin-bottom: 6px;
        letter-spacing: -0.02em;
    }

    .form-subtitle {
        color: var(--muted);
        font-size: 15px;
        font-weight: 500;
        line-height: 1.55;
    }

    .flash-success {
        background: #ecfdf5;
        border: 1px solid #a7f3d0;
        color: #065f46;
        padding: 10px 14px;
        border-radius: 12px;
        margin-bottom: 16px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #374151;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        width: 100%;
        background: #ffffff;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 14px 16px;
        font-size: 15px;
        color: var(--text);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: var(--shadow-sm);
    }

    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: #8b5cf6;
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.15), var(--shadow-sm);
        transform: translateY(-1px);
    }

    textarea.form-control {
        min-height: 140px;
        resize: vertical;
        line-height: 1.6;
    }

    .form-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid #e2e8f0;
    }

    .btn-submit {
        background: var(--primary-gradient);
        border: none;
        color: #fff;
        padding: 14px 28px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: var(--shadow-md);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-submit:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg), var(--shadow-glow);
    }

    .btn-ghost {
        background: #f1f5f9;
        color: #475569;
        border: 1px solid #e2e8f0;
        padding: 14px 24px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 15px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
    }

    .btn-ghost:hover {
        background: #e2e8f0;
        color: #334155;
        border-color: #cbd5e1;
        transform: translateY(-1px);
    }

    @media (max-width: 768px) {
        .form-page {
            padding: 24px 0 60px;
        }
        .form-card {
            padding: 24px;
            margin: 0 16px;
        }
        .form-actions {
            flex-direction: column;
        }
        .btn-submit, .btn-ghost {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<section class="form-page">
    <div class="container form-container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-7 col-xl-6">
                <div class="form-card">
                    <div class="form-header">
                        <h1 class="form-title">Modifier une Question</h1>
                        <p class="form-subtitle">Mettez à jour les informations de votre question.</p>
                    </div>

                    {% for msg in app.flashes('success') %}
                        <div class="flash-success">{{ msg }}</div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.specialite, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.specialite, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.specialite) }}
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-submit">Enregistrer</button>
                            <a class="btn-ghost" href="{{ path('question_index') }}">Retour à la liste</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
