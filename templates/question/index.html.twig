{% extends 'base.html.twig' %}

{% block title %}Liste des Questions{% endblock %}

{% block body %}
{% set questions = questions|default([]) %}
<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #38bdf8 0%, #0ea5e9 50%, #0284c7 100%);
        --primary-hover: linear-gradient(135deg, #0ea5e9 0%, #0284c7 50%, #0369a1 100%);
        --glass-bg: rgba(255, 255, 255, 0.75);
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --shadow-glow: 0 0 20px rgba(14, 165, 233, 0.35);
    }

    .page-wrapper {
        min-height: 100vh;
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
        padding: 48px 0 80px;
        position: relative;
        overflow: hidden;
    }

    .page-wrapper::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -10%;
        width: 120%;
        height: 100%;
        background: radial-gradient(ellipse at top, rgba(56, 189, 248, 0.12) 0%, transparent 70%);
        pointer-events: none;
    }

    .header-section {
        position: relative;
        z-index: 1;
        margin-bottom: 32px;
    }

    .page-title {
        font-size: clamp(28px, 5vw, 36px);
        font-weight: 800;
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
        letter-spacing: -0.02em;
    }

    .page-subtitle {
        color: #64748b;
        font-size: 15px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .page-subtitle::before {
        content: '';
        display: inline-block;
        width: 4px;
        height: 4px;
        background: #0ea5e9;
        border-radius: 50%;
    }

    .btn-cta {
        background: var(--primary-gradient);
        border: none;
        color: #fff;
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 14px;
        box-shadow: var(--shadow-md), 0 0 0 1px rgba(255, 255, 255, 0.1) inset;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-cta::before {
        content: '+';
        font-size: 18px;
        font-weight: 300;
    }

    .btn-cta:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg), var(--shadow-glow);
    }

    .btn-cta:active {
        transform: translateY(0);
    }

    .specialty-grid {
        display: grid;
        grid-auto-flow: column;
        grid-auto-columns: minmax(240px, 1fr);
        gap: 18px;
        margin-bottom: 28px;
        position: relative;
        z-index: 1;
        overflow: hidden;
        scroll-behavior: smooth;
    }
    .specialty-nav {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 12px;
        justify-content: flex-end;
    }
    .specialty-btn {
        width: 38px;
        height: 38px;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        background: #fff;
        color: #64748b;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        box-shadow: var(--shadow-sm);
    }
    .specialty-btn:hover {
        border-color: #0ea5e9;
        color: #0ea5e9;
        background: #f0f9ff;
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }
    .specialty-btn svg {
        width: 18px;
        height: 18px;
    }

    .specialty-card {
        background: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 18px;
        padding: 18px 18px 16px;
        box-shadow: 0 10px 24px rgba(15, 23, 42, 0.06);
        display: flex;
        flex-direction: column;
        gap: 10px;
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    }

    .specialty-card:hover {
        transform: translateY(-3px);
        border-color: #bae6fd;
        box-shadow: 0 16px 32px rgba(14, 165, 233, 0.15);
    }

    .specialty-card.is-active {
        border-color: #0ea5e9;
        box-shadow: 0 16px 32px rgba(14, 165, 233, 0.2);
    }

    .specialty-chip {
        align-self: flex-start;
        font-size: 12px;
        font-weight: 600;
        color: #0f172a;
        background: #eff6ff;
        border: 1px solid #dbeafe;
        padding: 4px 10px;
        border-radius: 999px;
    }

    .specialty-title {
        font-size: 18px;
        font-weight: 700;
        color: #0f172a;
        margin: 0;
    }

    .specialty-desc {
        color: #64748b;
        font-size: 13px;
        line-height: 1.5;
        margin: 0;
    }

    .specialty-meta {
        margin-top: auto;
        display: flex;
        align-items: center;
        gap: 8px;
        color: #64748b;
        font-size: 12px;
        font-weight: 600;
    }

    .filter-bar {
        background: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 22px;
        padding: 22px;
        box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
        margin-bottom: 28px;
        position: relative;
        z-index: 1;
    }

    .filter-header {
        margin-bottom: 14px;
    }

    .filter-title {
        font-size: 20px;
        font-weight: 700;
        color: #1e293b;
        margin: 0 0 2px;
    }

    .filter-subtitle {
        font-size: 14px;
        color: #64748b;
        margin: 0;
    }

    .filter-form {
        display: flex;
        gap: 16px;
        align-items: center;
    }

    .search-wrapper {
        position: relative;
        flex: 1;
    }

    .search-icon {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        pointer-events: none;
        transition: color 0.2s;
    }

    .filter-input {
        border: 1px solid #e2e8f0;
        border-radius: 18px;
        padding: 12px 16px 12px 44px;
        font-size: 15px;
        background: #f8fafc;
        transition: all 0.2s;
        width: 100%;
    }

    .filter-input:focus {
        outline: none;
        border-color: #0ea5e9;
        box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.16);
        background: #ffffff;
    }

    .search-hint {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 11px;
        color: #94a3b8;
        border: 1px solid #e2e8f0;
        background: #ffffff;
        border-radius: 6px;
        padding: 2px 6px;
        display: none;
    }

    @media (min-width: 768px) {
        .search-hint {
            display: inline-block;
        }
    }

    .btn-search {
        background: #0ea5e9;
        border: none;
        color: #fff;
        width: 46px;
        height: 46px;
        border-radius: 14px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 20px rgba(14, 165, 233, 0.25);
        transition: all 0.2s;
    }

    .btn-search:hover {
        background: #0284c7;
        transform: translateY(-1px);
        box-shadow: 0 14px 26px rgba(14, 165, 233, 0.3);
    }

    .filter-tags {
        margin-top: 12px;
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        align-items: center;
    }

    .filter-tag {
        font-size: 11px;
        padding: 4px 10px;
        border-radius: 999px;
        background: #f1f5f9;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }

    .icon-mini {
        width: 46px;
        height: 46px;
        border-radius: 14px;
        border: 1px solid #cbd5e1;
        background: #ffffff;
        color: #64748b;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 16px rgba(15, 23, 42, 0.08);
    }
    .icon-mini:hover {
        color: #0ea5e9;
        border-color: #0ea5e9;
    }

    .search-actions {
        display: flex;
        gap: 10px;
        align-items: center;
        justify-content: flex-end;
        flex-shrink: 0;
    }

    @media (max-width: 768px) {
        .filter-form {
            flex-direction: column;
            align-items: stretch;
        }
        .search-actions {
            justify-content: flex-start;
        }
    }

    .questions-grid {
        display: flex;
        flex-direction: column;
        gap: 20px;
        position: relative;
        z-index: 1;
    }

    .question-card {
        background: #fff;
        border: 1px solid #e2e8f0;
        border-radius: 20px;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
        position: relative;
    }

    .question-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--primary-gradient);
        transform: scaleX(0);
        transition: transform 0.3s;
    }

    .question-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
        border-color: #cbd5e1;
    }

    .question-card:hover::before {
        transform: scaleX(1);
    }

    .card-body {
        padding: 24px;
    }
    .card-hero {
        width: 100%;
        height: 160px;
        overflow: hidden;
        background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
        position: relative;
    }
    .card-hero::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(180deg, rgba(15, 23, 42, 0) 0%, rgba(15, 23, 42, 0.25) 100%);
        pointer-events: none;
    }
    .card-hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .author-section {
        display: flex;
        align-items: center;
        gap: 12px;
        min-width: 200px;
    }

    .avatar {
        width: 48px;
        height: 48px;
        border-radius: 14px;
        background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
        color: #7c3aed;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 18px;
        box-shadow: 0 2px 8px rgba(124, 58, 237, 0.15);
        flex-shrink: 0;
    }

    .author-info {
        display: flex;
        flex-direction: column;
    }

    .meta-name {
        font-weight: 700;
        color: #1e293b;
        font-size: 14px;
        line-height: 1.4;
    }

    .meta-sub {
        color: #94a3b8;
        font-size: 12px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .meta-sub::before {
        content: '•';
        color: #cbd5e1;
    }

    .content-section {
        flex-grow: 1;
    }

    .q-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 16px;
        margin-bottom: 12px;
    }

    .q-title-row {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        min-width: 0;
        flex-grow: 1;
    }

    .q-title {
        font-size: 18px;
        font-weight: 700;
        color: #1e293b;
        line-height: 1.4;
        margin: 0;
    }

    .q-title a {
        color: inherit;
        text-decoration: none;
        transition: color 0.2s;
    }

    .q-title a:hover {
        color: #7c3aed;
    }

    .edit-icon {
        width: 30px;
        height: 30px;
        border-radius: 9px;
        border: 1px solid #e2e8f0;
        background: #f8fafc;
        color: #64748b;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .edit-icon:hover {
        color: #1e293b;
        border-color: #cbd5e1;
        background: #ffffff;
        box-shadow: 0 6px 14px rgba(15, 23, 42, 0.08);
        transform: translateY(-1px);
    }

    .stats-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        background: #f1f5f9;
        border-radius: 20px;
        color: #64748b;
        font-size: 12px;
        font-weight: 600;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .stats-badge svg {
        width: 14px;
        height: 14px;
    }

    .q-desc {
        color: #475569;
        font-size: 14px;
        line-height: 1.6;
        margin-bottom: 16px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .tags-row {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 10px;
    }

    .pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.2s;
    }

    .pill-specialty {
        background: linear-gradient(135deg, #38bdf8 0%, #0ea5e9 100%);
        color: #fff;
        box-shadow: 0 2px 8px rgba(14, 165, 233, 0.25);
    }

    .pill-date {
        background: #f1f5f9;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }

    .pill-date svg {
        width: 12px;
        height: 12px;
    }

    .like-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 999px;
        background: #f1f5f9;
        color: #64748b;
        font-size: 12px;
        font-weight: 600;
        border: 1px solid #e2e8f0;
        text-decoration: none;
        transition: all 0.2s;
    }
    .like-btn:hover {
        background: #e0f2fe;
        color: #0369a1;
        border-color: #bae6fd;
    }
    .like-btn svg {
        width: 12px;
        height: 12px;
    }

    .reply-btn {
        color: #0284c7;
        font-weight: 600;
        font-size: 13px;
        text-decoration: none;
        padding: 6px 14px;
        border-radius: 8px;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        margin-left: auto;
    }

    .reply-btn:hover {
        background: #e0f2fe;
        color: #0369a1;
    }

    .reply-btn svg {
        width: 14px;
        height: 14px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: #fff;
        border-radius: 20px;
        border: 2px dashed #e2e8f0;
        color: #94a3b8;
    }

    .empty-state-icon {
        width: 64px;
        height: 64px;
        background: #f1f5f9;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
        color: #cbd5e1;
    }

    .empty-state-text {
        font-size: 16px;
        font-weight: 600;
        color: #64748b;
        margin-bottom: 8px;
    }

    .empty-state-sub {
        font-size: 14px;
        color: #94a3b8;
    }

    /* Inline Reply */
    .reply-card {
        display: flex;
        gap: 12px;
        align-items: flex-start;
    }

    .reply-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #e0f2fe;
        color: #0284c7;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        flex-shrink: 0;
    }

    .reply-box {
        flex: 1;
        background: #f6f7fb;
        border: 1px solid #e2e8f0;
        border-radius: 14px;
        padding: 12px 14px;
    }

    .reply-textarea {
        width: 100%;
        border: 0;
        background: transparent;
        font-size: 14px;
        resize: none;
        min-height: 90px;
        outline: none;
    }

    .reply-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }

    .reply-hint {
        color: #94a3b8;
        font-size: 12px;
    }

    .btn-close-custom {
        background: #f1f5f9;
        border: none;
        color: #64748b;
        padding: 8px 14px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 13px;
        transition: all 0.2s;
    }

    .btn-close-custom:hover {
        background: #e2e8f0;
        color: #475569;
    }

    .btn-send {
        background: var(--primary-gradient);
        border: none;
        color: #fff;
        padding: 8px 16px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 13px;
        transition: all 0.2s;
    }

    .btn-send:hover {
        background: var(--primary-hover);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    .reply-inline {
        border-top: 1px solid #eef2f7;
        margin-top: 16px;
        padding-top: 16px;
    }

    .replies-list {
        margin-top: 16px;
        display: grid;
        gap: 12px;
    }
    .replies-controls {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-top: 10px;
        font-size: 12px;
        color: #64748b;
    }
    .replies-btn {
        border: 1px solid #e2e8f0;
        background: #fff;
        color: #475569;
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    .replies-btn:hover {
        border-color: #0ea5e9;
        color: #0ea5e9;
        background: #f0f9ff;
        transform: translateY(-1px);
        box-shadow: 0 8px 16px rgba(14, 165, 233, 0.15);
    }
    .replies-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }
    .replies-btn svg {
        width: 14px;
        height: 14px;
    }
    .replies-btn.pulse {
        animation: pulseArrow 1.6s ease-in-out infinite;
    }
    @keyframes pulseArrow {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-2px); }
    }
    .reply-item {
        background: #f9fbff;
        border: 1px solid #e2e8f0;
        border-radius: 14px;
        padding: 12px 14px;
        font-size: 13px;
        color: #334155;
        transition: box-shadow 0.2s ease, border-color 0.2s ease;
    }
    .reply-item:hover {
        border-color: #cbd5e1;
        box-shadow: 0 8px 18px rgba(15, 23, 42, 0.08);
    }
    .reply-item-head {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 8px;
    }
    .reply-actions-top {
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    .reply-item-meta {
        font-size: 11px;
        color: #94a3b8;
        margin-bottom: 6px;
    }
    .reply-item-content {
        display: flex;
        gap: 12px;
        align-items: flex-start;
    }
    .reply-avatar-img {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        object-fit: cover;
        box-shadow: 0 6px 14px rgba(15, 23, 42, 0.12);
        border: 1px solid #e2e8f0;
        background: #fff;
        flex-shrink: 0;
    }
    .reply-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }
    .reply-body .like-btn {
        align-self: flex-start;
        margin-top: 2px;
    }
    .reply-like {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 999px;
        background: #ecfeff;
        color: #0e7490;
        font-size: 12px;
        font-weight: 600;
        border: 1px solid #cffafe;
        box-shadow: 0 6px 14px rgba(6, 182, 212, 0.18);
    }
    .reply-like svg {
        width: 12px;
        height: 12px;
    }
    .reply-edit-btn {
        width: 26px;
        height: 26px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        background: #ffffff;
        color: #64748b;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }
    .reply-edit-btn:hover {
        color: #1e293b;
        border-color: #cbd5e1;
        box-shadow: 0 6px 14px rgba(15, 23, 42, 0.08);
        transform: translateY(-1px);
    }
    .reply-delete-btn {
        width: 26px;
        height: 26px;
        border-radius: 8px;
        border: 1px solid #fee2e2;
        background: #fff;
        color: #ef4444;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }
    .reply-delete-btn:hover {
        background: #fef2f2;
        border-color: #fecaca;
        transform: translateY(-1px);
        box-shadow: 0 6px 14px rgba(239, 68, 68, 0.15);
    }

    /* Modal usability */
    .modal {
        z-index: 2000;
    }

