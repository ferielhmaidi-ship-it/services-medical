<script>
    document.addEventListener('DOMContentLoaded', () => {
        const specGrid = document.querySelector('.specialty-grid');
        const specPrev = document.querySelector('[data-specialty-prev]');
        const specNext = document.querySelector('[data-specialty-next]');
        if (specGrid && specPrev && specNext) {
            const scrollBy = () => specGrid.clientWidth * 0.9;
            specPrev.addEventListener('click', () => {
                specGrid.scrollBy({ left: -scrollBy(), behavior: 'smooth' });
            });
            specNext.addEventListener('click', () => {
                specGrid.scrollBy({ left: scrollBy(), behavior: 'smooth' });
            });
        }

        const lists = document.querySelectorAll('.replies-list[data-page-size]');
        lists.forEach((list) => {
            const pageSize = parseInt(list.getAttribute('data-page-size'), 10) || 3;
            const items = Array.from(list.querySelectorAll('.reply-item'));
            if (items.length <= pageSize) {
                const controls = list.parentElement.querySelector('[data-replies-controls]');
                if (controls) controls.style.display = 'none';
                return;
            }

            let page = 1;
            const totalPages = Math.ceil(items.length / pageSize);
            const controls = list.parentElement.querySelector('[data-replies-controls]');
            const prevBtn = controls.querySelector('[data-replies-prev]');
            const nextBtn = controls.querySelector('[data-replies-next]');
            const pageLabel = controls.querySelector('[data-replies-page]');

            function render() {
                const start = (page - 1) * pageSize;
                const end = start + pageSize;
                items.forEach((item, idx) => {
                    item.style.display = idx >= start && idx < end ? '' : 'none';
                });
                pageLabel.textContent = `Page ${page} / ${totalPages}`;
                prevBtn.disabled = page === 1;
                nextBtn.disabled = page === totalPages;
            }

            prevBtn.addEventListener('click', () => {
                if (page > 1) { page -= 1; render(); }
            });
            nextBtn.addEventListener('click', () => {
                if (page < totalPages) { page += 1; render(); }
            });

            render();
        });
    });
</script>
