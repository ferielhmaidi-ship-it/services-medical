    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
    font-size: 1.125rem;
    transition: all 0.2s;
    pointer-events: none;
}

.form-control:focus + .input-icon,
.input-wrapper:focus-within .input-icon {
    color: var(--primary);
    transform: translateY(-50%) scale(1.1);
}

textarea.form-control {
