{% extends 'base.html.twig' %}

{% block title %}Détails de l'Ordonnance{% endblock %}

{% block body %}
<style>
@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');

:root {
    --primary: #059669;
    --primary-dark: #047857;
    --primary-light: #10b981;
    --accent: #f59e0b;
    --danger: #ef4444;
    --success: #10b981;
    --bg-warm: #f0fdf4;
    --surface: #ffffff;
    --text-primary: #1c1917;
    --text-secondary: #78716c;
    --text-muted: #a8a29e;
    --border: #e7e5e4;
    --shadow-soft: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-medium: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-large: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 24px;
}

/* ===== PAGE BACKGROUND ET ESPACEMENT ===== */
.page {
    background: var(--bg-warm);
    min-height: 100vh;
    padding: 6rem 2rem 4rem;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
    line-height: 1.6;
}

/* ===== CARD ===== */
.card {
    background: var(--surface);
    max-width: 800px;
    width: 100%;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-large);
    overflow: hidden;
    border: 1px solid var(--border);
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    margin-top: 2rem;
    margin-bottom: 2rem;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ===== HEADER ===== */
.card-header {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 50%, #064e3b 100%);
    padding: 2.5rem 2rem;
    position: relative;
    overflow: hidden;
    text-align: center;
}

.card-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    border-radius: 50%;
    animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.1); opacity: 0.8; }
}

.card-icon {
    width: 64px;
    height: 64px;
    background: rgba(255,255,255,0.15);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    border: 1px solid rgba(255,255,255,0.2);
    box-shadow: var(--shadow-medium);
    margin: 0 auto 1rem;
    position: relative;
    z-index: 1;
}

.card h2 {
    color: white;
    margin: 0;
    font-size: 1.75rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    position: relative;
    z-index: 1;
}

.card-subtitle {
    color: rgba(255,255,255,0.8);
    font-size: 1rem;
    margin: 0.5rem 0 0 0;
    font-weight: 500;
    position: relative;
    z-index: 1;
}

/* Badge */
.badge-group {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    position: relative;
    z-index: 1;
}

.badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255,255,255,0.15);
    backdrop-filter: blur(10px);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(255,255,255,0.9);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid rgba(255,255,255,0.2);
}

/* Progress bar */
.progress-bar {
    display: flex;
    gap: 0.5rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    position: relative;
    z-index: 1;
}

.progress-step {
    flex: 1;
    height: 4px;
    background: rgba(255,255,255,0.2);
    border-radius: 2px;
}

.progress-step.completed {
    background: rgba(255,255,255,0.6);
}

.progress-step.active {
    background: var(--accent);
    box-shadow: 0 0 10px rgba(245, 158, 11, 0.5);
}

/* ===== CARD BODY ===== */
.card-body {
    padding: 2.5rem;
}

/* Info Card */
.info-card {
    background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
    border: 2px solid #a7f3d0;
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    margin-bottom: 2rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
}

.info-icon {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
    color: white;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
    box-shadow: var(--shadow-medium);
}

.info-content {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
}

.info-content strong {
    color: var(--primary-dark);
    display: block;
    margin-bottom: 0.25rem;
    font-size: 1rem;
    font-weight: 700;
}

/* ===== ITEMS ===== */
.data-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
}

.item {
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    transition: all 0.3s ease;
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
}

.item:nth-child(1) { animation-delay: 0.1s; }
.item:nth-child(2) { animation-delay: 0.2s; }
.item:nth-child(3) { animation-delay: 0.3s; }
.item:nth-child(4) { animation-delay: 0.4s; }
.item:nth-child(5) { animation-delay: 0.5s; }
.item:nth-child(6) { animation-delay: 0.6s; }

@keyframes fadeIn {
    to { opacity: 1; }
}

.item:hover {
    border-color: var(--primary-light);
    box-shadow: var(--shadow-medium);
    transform: translateY(-2px);
}

.item-full {
    grid-column: 1 / -1;
}

.item-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--border);
}

.item-icon {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.125rem;
    box-shadow: var(--shadow-medium);
    flex-shrink: 0;
}

.item-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
}

.label {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.375rem;
}

.value {
    color: var(--text-primary);
    line-height: 1.6;
    white-space: pre-line;
    word-break: break-word;
    font-size: 0.9375rem;
    font-weight: 600;
    background: #f8fafc;
    padding: 0.75rem 1rem;
    border-radius: var(--radius-md);
    border-left: 4px solid var(--primary-light);
}

.value.empty {
    color: var(--text-muted);
    font-style: italic;
    font-weight: 500;
    border-left-color: var(--border);
}

.value.highlight {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--primary-dark);
    background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
    border-left-color: var(--primary);
}

.value.mono {
    font-family: 'SF Mono', monospace;
    font-size: 0.875rem;
    color: var(--primary-dark);
    background: rgba(5, 150, 105, 0.1);
    border-left-color: var(--primary-light);
}

/* ===== ACTIONS ===== */
.card-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 2px solid var(--border);
    justify-content: flex-end;
    align-items: center;
}

.status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-right: auto;
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 500;
}

.status-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: pulse-dot 2s infinite;
}

@keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: 1rem 2rem;
    border-radius: var(--radius-md);
    font-size: 0.9375rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:active::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    box-shadow: 0 4px 14px 0 rgba(5, 150, 105, 0.39);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(5, 150, 105, 0.23);
}

.btn-secondary {
    background: var(--surface);
    color: var(--text-secondary);
    border: 2px solid var(--border);
}

.btn-secondary:hover {
    border-color: var(--text-muted);
    color: var(--text-primary);
    background: var(--bg-warm);
}

/* ===== RESPONSIVE ===== */
@media (max-width: 640px) {
    .page {
        padding: 4rem 1rem 2rem;
    }
    
    .card {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
    
    .card-header {
        padding: 2rem 1.5rem;
    }
    
    .card h2 {
        font-size: 1.5rem;
    }
    
    .card-body {
        padding: 1.5rem;
    }
    
    .data-grid {
        grid-template-columns: 1fr;
        gap: 1.25rem;
    }
    
    .card-actions {
        flex-direction: column-reverse;
        align-items: stretch;
    }

    .status-indicator {
        justify-content: center;
        margin-right: 0;
        margin-bottom: 0.5rem;
    }
    
    .btn {
        width: 100%;
    }
    
    .info-card {
        flex-direction: column;
        text-align: center;
    }
}
</style>

<div class="page">
    <div class="card">
        <header class="card-header">
            <div class="card-icon">💊</div>
            <h2>Détails de l'Ordonnance</h2>
            <p class="card-subtitle">Prescription médicale et informations associées</p>
            
            <div class="badge-group">
                <div class="badge">
                    <span>📋</span>
                    <span>ID #{{ ordonnance.id }}</span>
                </div>
                <div class="badge">
                    <span>📅</span>
                    <span>{{ ordonnance.createdAt|date('d/m/Y') }}</span>
                </div>
            </div>
            
            <div class="progress-bar">
                <div class="progress-step completed"></div>
                <div class="progress-step completed"></div>
                <div class="progress-step active"></div>
            </div>
        </header>

        <div class="card-body">
            <div class="info-card">
                <div class="info-icon">ℹ️</div>
                <div class="info-content">
                    <strong>Ordonnance médicale</strong>
                    Ce document contient des informations sensibles. Vérifiez attentivement les posologies avant délivrance.
                </div>
            </div>

            <div class="data-grid">
                <!-- ID -->
                <article class="item">
                    <div class="item-header">
                        <div class="item-icon">🆔</div>
                        <h4 class="item-title">Identifiant</h4>
                    </div>
                    <div class="label">
                        <span>#</span>
                        <span>Numéro d'ordonnance</span>
                    </div>
                    <div class="value mono">{{ ordonnance.id }}</div>
                </article>

                <!-- Date -->
                <article class="item">
                    <div class="item-header">
                        <div class="item-icon">📅</div>
                        <h4 class="item-title">Date</h4>
                    </div>
                    <div class="label">
                        <span>📆</span>
                        <span>Date de création</span>
                    </div>
                    <div class="value highlight">{{ ordonnance.createdAt|date('d/m/Y H:i') }}</div>
                </article>

                <!-- Médicament -->
                <article class="item item-full">
                    <div class="item-header">
                        <div class="item-icon">💊</div>
                        <h4 class="item-title">Médicament</h4>
                    </div>
                    <div class="label">
                        <span>⚕️</span>
                        <span>Médicaments prescrits</span>
                    </div>
                    <div class="value">{{ ordonnance.medicament|default('Aucun médicament') }}</div>
                </article>

                <!-- Posologie -->
                <article class="item item-full">
                    <div class="item-header">
                        <div class="item-icon">⏰</div>
                        <h4 class="item-title">Posologie</h4>
                    </div>
                    <div class="label">
                        <span>💡</span>
                        <span>Dosage et fréquence</span>
                    </div>
                    <div class="value">{{ ordonnance.posologie|default('Non spécifiée') }}</div>
                </article>

                <!-- Instructions -->
                <article class="item item-full">
                    <div class="item-header">
                        <div class="item-icon">📋</div>
                        <h4 class="item-title">Instructions</h4>
                    </div>
                    <div class="label">
                        <span>⚠️</span>
                        <span>Instructions spéciales</span>
                    </div>
                    <div class="value {% if not ordonnance.instructions %}empty{% endif %}">
                        {{ ordonnance.instructions|default('Aucune instruction particulière') }}
                    </div>
                </article>

                <!-- Notes -->
                <article class="item item-full">
                    <div class="item-header">
                        <div class="item-icon">📝</div>
                        <h4 class="item-title">Notes</h4>
                    </div>
                    <div class="label">
                        <span>🗒️</span>
                        <span>Notes complémentaires</span>
                    </div>
                    <div class="value {% if not ordonnance.notes %}empty{% endif %}">
                        {{ ordonnance.notes|default('Aucune note') }}
                    </div>
                </article>
            </div>

            {% if not isEmbed|default(false) %}
                <div class="card-actions">
                    <div class="status-indicator">
                        <span class="status-dot"></span>
                        <span>Visualisation active</span>
                    </div>
                    
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                        Retour
                    </a>
                    
                    <a href="{{ path('ordonnance_mod', {'id': ordonnance.id, 'return': app.request.query.get('return') ?: app.request.uri }) }}" class="btn btn-primary">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"></path>
                            <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                        </svg>
                        Modifier l'ordonnance
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
// Animation au scroll
const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
};

const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
        if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
        }
    });
}, observerOptions);

document.querySelectorAll('.item, .info-card').forEach(card => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(20px)';
    card.style.transition = 'all 0.6s cubic-bezier(0.16, 1, 0.3, 1)';
    observer.observe(card);
});
</script>
{% endblock %}