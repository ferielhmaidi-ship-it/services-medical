{% extends 'base.html.twig' %}

{% block title %}My Patient Feedbacks - Tabibnet{% endblock %}

{% block body %}
<div class="page-title">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="heading-title">Patient Feedbacks</h1>
          <p class="text-muted">for Dr. {{ medecin.firstName }} {{ medecin.lastName }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        {% if feedbacks is not empty %}
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Patient</th>
                  <th>Rating</th>
                  <th>Comment</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                {% for feedback in feedbacks %}
                  <tr>
                    <td>
                      <strong>{{ feedback.patient.firstName }} {{ feedback.patient.lastName }}</strong><br>
                      <small class="text-muted">{{ feedback.patient.email }}</small>
                    </td>
                    <td>
                      <span class="badge bg-warning text-dark">
                        {{ feedback.getStars() }} ({{ feedback.rating }}/5)
                      </span>
                    </td>
                    <td>{{ feedback.comment }}</td>
                    <td class="text-muted">{{ feedback.createdAt|date('d/m/Y H:i') }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            No feedback received yet. Keep providing excellent care!
          </div>
        {% endif %}

        <div class="mt-4">
          <a href="{{ path('app_doctor_appointments', {doctor_id: medecin.id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to My Appointments
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
