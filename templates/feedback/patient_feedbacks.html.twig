{% extends 'base.html.twig' %}

{% block title %}My Feedbacks - MediNest{% endblock %}

{% block body %}
<div class="page-title">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="heading-title">My Feedbacks</h1>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li><a href="{{ path('app_my_appointments') }}">My Appointments</a></li>
        <li class="current">My Feedbacks</li>
      </ol>
    </div>
  </nav>
</div>

<section class="section">
  <div class="container">
    
    {% for message in app.flashes('success') %}
      <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
      <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endfor %}

    {% if patient %}
      <div class="alert alert-secondary" role="alert">
        <i class="bi bi-person-circle me-2"></i>
        <strong>Logged in as:</strong> {{ patient.firstName }} {{ patient.lastName }} ({{ patient.email }})
        <a href="{{ path('app_my_appointments') }}" class="btn btn-sm btn-outline-secondary float-end">Back to Appointments</a>
      </div>
    {% endif %}

    {% if feedbacks|length > 0 %}
      <div class="row">
        {% for feedback in feedbacks %}
          <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h5 class="mb-0">Dr. {{ feedback.medecin.firstName }} {{ feedback.medecin.lastName }}</h5>
                    <small>{{ feedback.medecin.specialite }}</small>
                  </div>
                  <div>
                    <span class="badge bg-light text-dark">{{ feedback.stars }}</span>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <p class="card-text">{{ feedback.comment }}</p>
                <small class="text-muted d-block mt-3">
                  <i class="bi bi-calendar-event me-1"></i>
                  {{ feedback.createdAt|date('d/m/Y H:i') }}
                </small>
              </div>
              <div class="card-footer bg-light">
                <div class="btn-group btn-group-sm w-100" role="group">
                  <a href="{{ path('app_feedback_edit', {id: feedback.id}) }}" class="btn btn-primary" title="Edit feedback">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <form method="post" action="{{ path('app_feedback_delete', {id: feedback.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feedback.id) }}">
                    <button type="submit" class="btn btn-danger" title="Delete feedback">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <strong>No feedbacks yet!</strong> Complete an appointment and leave feedback for the doctor.
      </div>
    {% endif %}

    <div class="text-center mt-5">
      <a href="{{ path('app_my_appointments') }}" class="btn btn-secondary btn-lg">
        <i class="bi bi-arrow-left me-2"></i> Back to My Appointments
      </a>
    </div>

  </div>
</section>
{% endblock %}
