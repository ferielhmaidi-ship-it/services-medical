{% extends 'base.html.twig' %}

{% block title %}Edit Feedback - MediNest{% endblock %}

{% block body %}
<div class="page-title">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="heading-title">Edit Feedback</h1>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li><a href="{{ path('app_patient_feedbacks') }}">My Feedbacks</a></li>
        <li class="current">Edit Feedback</li>
      </ol>
    </div>
  </nav>
</div>

<section class="section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        
        {% for message in app.flashes('error') %}
          <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        {% endfor %}

        <!-- Doctor Details Card -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Doctor Information</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <p class="mb-2"><strong>Doctor:</strong></p>
                <p>Dr. {{ feedback.medecin.firstName }} {{ feedback.medecin.lastName }}</p>
              </div>
              <div class="col-md-6">
                <p class="mb-2"><strong>Specialty:</strong></p>
                <p>{{ feedback.medecin.specialite }}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Feedback Edit Form Card -->
        <div class="card">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0">Update Your Feedback</h5>
          </div>
          <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'feedback-form', 'novalidate': 'novalidate'}}) }}
              
              <div class="mb-4">
                <label class="form-label" for="{{ form.rating.vars.id }}">
                  <strong>{{ form_label(form.rating) }}</strong>
                </label>
                <div class="form-group">
                  {{ form_widget(form.rating, {'attr': {'class': 'form-select form-select-lg'}}) }}
                </div>
                {% if form.rating.vars.errors|length %}
                  <div class="alert alert-danger mt-2">
                    {% for error in form.rating.vars.errors %}
                      <small>{{ error.message }}</small><br>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>

              <div class="mb-4">
                <label class="form-label" for="{{ form.comment.vars.id }}">
                  <strong>{{ form_label(form.comment) }}</strong>
                </label>
                {{ form_widget(form.comment, {'attr': {'class': 'form-control', 'placeholder': form.comment.vars.attr.placeholder}}) }}
                <small class="form-text text-muted d-block mt-2">Minimum 10 characters required</small>
                {% if form.comment.vars.errors|length %}
                  <div class="alert alert-danger mt-2">
                    {% for error in form.comment.vars.errors %}
                      <small>{{ error.message }}</small><br>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>

              <div class="d-flex gap-2 justify-content-between">
                <a href="{{ path('app_patient_feedbacks') }}" class="btn btn-secondary">
                  <i class="bi bi-arrow-left me-1"></i> Back to Feedbacks
                </a>
                <button type="submit" class="btn btn-info btn-lg">
                  <i class="bi bi-check-circle me-1"></i> Update Feedback
                </button>
              </div>

            {{ form_end(form) }}
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
{% endblock %}
