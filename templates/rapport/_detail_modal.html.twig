    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: 1rem 2rem;
    border-radius: var(--radius-md);
    font-size: 0.9375rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:active::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    box-shadow: 0 4px 14px 0 rgba(13, 148, 136, 0.39);
    flex: 1;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(13, 148, 136, 0.23);
}

.btn-primary:active {
    transform: translateY(0);
}

.btn-secondary {
    background: var(--surface);
    color: var(--text-secondary);
    border: 2px solid var(--border);
    flex: 0 0 auto;
}

.btn-secondary:hover {
    border-color: var(--text-muted);
    color: var(--text-primary);
    background: var(--bg-warm);
}

/* Status indicator */
.status-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-right: auto;
}

.status-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: blink 2s infinite;
}

@keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

/* Appointment Card Highlight */
.appointment-card {
    background: linear-gradient(135deg, #f0fdfa 0%, #ffffff 100%);
    border: 2px solid #a7f3d0;
}

.appointment-card .card-header {
    border-bottom-color: #6ee7b7;
}

/* Timeline */
.timeline {
    position: relative;
    padding-left: 1.5rem;
    margin-top: 1rem;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--primary-light), var(--primary));
    border-radius: 2px;
}

.timeline-item {
    position: relative;
    padding-bottom: 1.5rem;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: -1.5rem;
    top: 0.25rem;
    width: 8px;
    height: 8px;
    background: var(--primary);
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: 0 0 0 2px var(--primary-light);
}

.timeline-label {
    font-size: 0.8125rem;
    color: var(--text-muted);
    margin-bottom: 0.25rem;
}

.timeline-value {
    font-size: 0.9375rem;
    color: var(--text-primary);
    font-weight: 600;
}

/* Responsive */
@media (max-width: 768px) {
    .report-viewer {
        padding: 3rem 1rem;
    }
    
    .report-container {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
    
    .report-hero {
        padding: 2rem 1.5rem;
    }
    
    .hero-content {
        flex-direction: column;
        text-align: center;
    }
    
    .hero-icon {
        width: 56px;
        height: 56px;
        font-size: 1.75rem;
    }
    
    .hero-text h1 {
        font-size: 1.5rem;
    }
    
    .report-content {
        padding: 1.5rem;
    }
    
    .data-grid {
        grid-template-columns: 1fr;
        gap: 1.25rem;
    }
    
    .data-card {
        padding: 1.25rem;
    }
    
    .report-actions {
        flex-direction: column-reverse;
    }
    
    .btn {
        width: 100%;
    }
    
    .info-card {
        flex-direction: column;
        text-align: center;
        padding: 1.25rem;
    }
    
    .status-indicator {
        margin-right: 0;
        margin-bottom: 1rem;
        justify-content: center;
    }
}
</style>

