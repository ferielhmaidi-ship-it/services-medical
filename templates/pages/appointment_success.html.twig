{% extends 'base.html.twig' %}

{% block title %}Appointment Confirmed - Tabibnet{% endblock %}

{% block body %}
<div class="page-title">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="heading-title">Appointment Confirmed</h1>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li><a href="{{ path('app_appointment') }}">Appointment</a></li>
        <li class="current">Confirmed</li>
      </ol>
    </div>
  </nav>
</div>

<section class="section">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-8">
        <div class="text-center mb-5">
          <div style="font-size: 80px; color: #28a745; margin-bottom: 20px;">
            <i class="bi bi-check-circle"></i>
          </div>
          <h2 style="font-size: 36px; color: #28a745; margin-bottom: 10px;">DONE!</h2>
          <p style="font-size: 18px; color: #666;">Your appointment has been successfully created!</p>
          {% if patient %}
            <p style="font-size: 16px; color: #666; margin-top: 10px;">
              <strong>Patient:</strong> {{ patient.firstName }} {{ patient.lastName }}
            </p>
          {% endif %}
        </div>

        <div class="card shadow-lg mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>All Appointments for {{ patient.firstName }} {{ patient.lastName }}</h5>
          </div>
          <div class="card-body">
            {% if appointments|length > 0 %}
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead class="table-light">
                    <tr>
                      <th>Appointment ID</th>
                      <th>Date</th>
                      <th>Doctor</th>
                      <th>Specialty</th>
                      <th>Status</th>
                      <th>Message</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for appt in appointments %}
                      <tr>
                        <td><strong>#{{ appt.id }}</strong></td>
                        <td>{{ appt.appointmentDate|date('d/m/Y H:i') }}</td>
                        <td>Dr. {{ appt.doctor.firstName }} {{ appt.doctor.lastName }}</td>
                        <td>{{ appt.doctor.specialite }}</td>
                        <td>
                          {% if appt.statut == 'en_attente' %}
                            <span class="badge bg-warning text-dark">Pending</span>
                          {% elseif appt.statut == 'termine' %}
                            <span class="badge bg-success">Completed</span>
                          {% else %}
                            <span class="badge bg-danger">Cancelled</span>
                          {% endif %}
                        </td>
                        <td>
                          {% if appt.message|length > 50 %}
                            {{ appt.message|slice(0, 50) }}...
                          {% else %}
                            {{ appt.message }}
                          {% endif %}
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            {% else %}
              <p class="text-muted text-center" style="padding: 20px;">No appointments found for this patient.</p>
            {% endif %}
          </div>
        </div>

        <div class="row mt-5">
          <div class="col-md-6 text-center">
            <a href="{{ path('app_my_appointments') }}" class="btn btn-primary btn-lg">
              <i class="bi bi-calendar-check me-2"></i>View All Appointments
            </a>
          </div>
          <div class="col-md-6 text-center">
            <a href="{{ path('app_home') }}" class="btn btn-secondary btn-lg">
              <i class="bi bi-house me-2"></i>Back to Home
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
