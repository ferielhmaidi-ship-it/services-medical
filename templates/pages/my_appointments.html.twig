{% extends 'base.html.twig' %}

{% block title %}My Appointments - MediNest{% endblock %}

{% block body %}
<div class="page-title">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="heading-title">My Appointments</h1>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li class="current">My Appointments</li>
      </ol>
    </div>
  </nav>
</div>

<section class="section">
  <div class="container">
    
    {% for message in app.flashes('success') %}
      <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
      <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
      <div class="alert alert-warning alert-dismissible fade show">
        <i class="bi bi-exclamation-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endfor %}

    {% for message in app.flashes('info') %}
      <div class="alert alert-info alert-dismissible fade show">
        <i class="bi bi-info-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endfor %}

    {% if patient %}
      <div class="alert alert-secondary" role="alert">
        <i class="bi bi-person-circle me-2"></i>
        <strong>Logged in as:</strong> {{ patient.firstName }} {{ patient.lastName }} ({{ patient.email }})
        <a href="{{ path('app_appointment') }}" class="btn btn-sm btn-outline-secondary float-end">New Appointment</a>
      </div>
    {% endif %}

    {# Barre de recherche et filtres #}
    <div class="row mb-4">
      <div class="col-md-8">
        <form method="get" class="d-flex gap-2">
          <input type="text" name="search" class="form-control" placeholder="Search by doctor name..." value="{{ search }}">
          <select name="statut" class="form-select" style="max-width: 200px;">
            <option value="">All Status</option>
            <option value="en_attente" {% if statut == 'en_attente' %}selected{% endif %}>Pending</option>
            <option value="termine" {% if statut == 'termine' %}selected{% endif %}>Completed</option>
            <option value="annule" {% if statut == 'annule' %}selected{% endif %}>Cancelled</option>
          </select>
          <button type="submit" class="btn btn-primary">Search</button>
          <a href="{{ path('app_my_appointments') }}" class="btn btn-secondary">Reset</a>
        </form>
      </div>
      <div class="col-md-4 text-end">
        <a href="{{ path('app_appointment') }}" class="btn btn-success">
          <i class="bi bi-plus-circle me-1"></i> New Appointment
        </a>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Date</th>
            <th>Doctor</th>
            <th>Specialty</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        {% for rdv in rendezVous %}
          <tr>
            <td>{{ rdv.appointmentDate|date('d/m/Y') }}</td>
            <td>Dr. {{ rdv.doctor.firstName }} {{ rdv.doctor.lastName }}</td>
            <td>{{ rdv.doctor.specialite }}</td>
            <td>
              {% if rdv.statut == 'en_attente' %}
                <span class="badge bg-warning text-dark">Pending</span>
              {% elseif rdv.statut == 'termine' %}
                <span class="badge bg-success">Completed</span>
              {% else %}
                <span class="badge bg-danger">Cancelled</span>
              {% endif %}
            </td>
            <td>
              {% if rdv.statut == 'en_attente' %}
                <div class="btn-group btn-group-sm" role="group">
                  <a href="{{ path('app_appointment_edit', {id: rdv.id}) }}" class="btn btn-primary" title="Edit appointment">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <form method="post" action="{{ path('app_appointment_cancel', {id: rdv.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to cancel this appointment?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ rdv.id) }}">
                    <button type="submit" class="btn btn-danger" title="Cancel appointment">
                      <i class="bi bi-x-circle"></i> Cancel
                    </button>
                  </form>
                </div>
              {% elseif rdv.statut == 'termine' %}
                <span class="badge bg-success">Completed</span>
              {% elseif rdv.statut == 'annule' %}
                <span class="badge bg-danger">Cancelled</span>
              {% endif %}
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5" class="text-center">No appointments found</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>
{% endblock %}