{% extends 'base.html.twig' %}

{% block title %}Donner mon avis - TabibNet{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white py-4 text-center border-0">
                    <h2 class="h4 mb-0">{{ is_edit ? 'Modifier mon avis' : 'Donner votre avis' }}</h2>
                    <p class="text-white-50 mb-0">Partagez votre expérience avec le Dr. {{ doctor.firstName }} {{ doctor.lastName }}</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    <form method="POST" id="feedbackForm">
                        <!-- Star Rating -->
                        <div class="text-center mb-5">
                            <label class="form-label d-block mb-3 fw-bold text-uppercase tracking-wider small text-muted">Votre note</label>
                            <div class="star-rating d-flex justify-content-center flex-row-reverse">
{% set current_rating = feedback.rating ?? 0 %}
                                <input type="radio" id="star5" name="rating" value="5" required {{ current_rating == 5 ? 'checked' : '' }} /><label for="star5" title="Excellent"><i class="fas fa-star"></i></label>
                                <input type="radio" id="star4" name="rating" value="4" {{ current_rating == 4 ? 'checked' : '' }} /><label for="star4" title="Très bien"><i class="fas fa-star"></i></label>
                                <input type="radio" id="star3" name="rating" value="3" {{ current_rating == 3 ? 'checked' : '' }} /><label for="star3" title="Bien"><i class="fas fa-star"></i></label>
                                <input type="radio" id="star2" name="rating" value="2" {{ current_rating == 2 ? 'checked' : '' }} /><label for="star2" title="Moyen"><i class="fas fa-star"></i></label>
                                <input type="radio" id="star1" name="rating" value="1" {{ current_rating == 1 ? 'checked' : '' }} /><label for="star1" title="Mauvais"><i class="fas fa-star"></i></label>
                            </div>
                        </div>

                        <!-- Comment -->
                        <div class="mb-4">
                            <label for="comment" class="form-label fw-bold">Votre commentaire</label>
                            <textarea name="comment" id="comment" class="form-control rounded-3 border-muted p-3" rows="5" placeholder="Comment s'est passée votre consultation ?" minlength="10" required>{{ feedback.comment ?? '' }}</textarea>
                            <div class="form-text mt-2">Minimum 10 caractères. Soyez constructif !</div>
                        </div>

                        <!-- Info Card -->
                        <div class="bg-light p-3 rounded-3 mb-4 d-flex align-items-center">
                            <div class="avatar me-3 bg-white rounded-circle shadow-sm" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-user-md text-primary h4 mb-0"></i>
                            </div>
                            <div>
                                <div class="fw-bold">{{ doctor.specialty }}</div>
                                <div class="small text-muted">Consultation du {{ appointment.date|date('d/m/Y') }} à {{ appointment.startTime|date('H:i') }}</div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3 fw-bold shadow-sm">
                                <i class="fas fa-paper-plane me-2"></i>Envoyer mon avis
                            </button>
                            <a href="{{ path('app_patient_appointment_list') }}" class="btn btn-link text-muted text-decoration-none">Plus tard</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.star-rating {
    font-size: 2.5rem;
}
.star-rating input {
    display: none;
}
.star-rating label {
    color: #ddd;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
    padding: 0 5px;
}
.star-rating input:checked ~ label,
.star-rating label:hover,
.star-rating label:hover ~ label {
    color: #ffc107;
}

.tracking-wider {
    letter-spacing: 0.1em;
}

.form-control:focus {
    border-color: #6a11cb;
    box-shadow: 0 0 0 0.25rem rgba(106, 17, 203, 0.1);
}

.card {
    transition: transform 0.3s ease;
}

@media (max-width: 576px) {
    .star-rating {
        font-size: 2rem;
    }
}
</style>
{% endblock %}
