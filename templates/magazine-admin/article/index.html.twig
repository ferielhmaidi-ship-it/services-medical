{# templates/magazine-admin/article/index.html.twig #}
{% extends 'base_admin.html.twig' %}

{% block title %}Gestion des Articles{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-newspaper text-primary"></i> Gestion des Articles
        </h1>
        <div>
            <a href="{{ path('app_article_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Nouvel Article
            </a>
            <span class="badge badge-primary ml-2">
                <i class="fas fa-newspaper"></i> {{ articles|length }} Article(s)
            </span>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Liste des Articles</h6>
            <div>
                <a href="{{ path('app_magazine_index') }}" class="btn btn-info btn-sm">
                    <i class="fas fa-book"></i> Voir les Magazines
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="articleTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Titre</th>
                            <th>Résumé</th>
                            <th>Auteur</th>
                            <th>Magazine</th>
                            <th>Date Publication</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td class="text-center">
                                {% if article.image %}
                                    <img src="{{ asset('uploads/' ~ article.image) }}" 
                                         alt="{{ article.title }}" 
                                         class="img-thumbnail" 
                                         style="width: 60px; height: 60px; object-fit: cover;">
                                {% else %}
                                    <div class="bg-light d-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px; border-radius: 4px;">
                                        <i class="fas fa-file-alt fa-2x text-muted"></i>
                                    </div>
                                {% endif %}
                            </td>
                            <td>
                                <strong>{{ article.title }}</strong>
                            </td>
                            <td>
                                {{ article.resume|length > 50 ? article.resume|slice(0, 50) ~ '...' : article.resume }}
                            </td>
                            <td>
                                <i class="fas fa-user"></i> {{ article.auteur }}
                            </td>
                            <td>
                                {% if article.magazine %}
                                    <a href="{{ path('app_magazine_show', {'id': article.magazine.id}) }}" 
                                       class="text-primary">
                                        {{ article.magazine.title }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">Aucun</span>
                                {% endif %}
                            </td>
                            <td>
                                {{ article.datePub ? article.datePub|date('d/m/Y') : '-' }}
                            </td>
                            <td>
                                {% if article.statut == 'published' %}
                                    <span class="badge badge-success">Publié</span>
                                {% else %}
                                    <span class="badge badge-warning">Brouillon</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="9" class="text-center">Aucun article trouvé</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable) {
                $('#articleTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json"
                    }
                });
            }
        });
    </script>
{% endblock %}
