{% extends 'magazine-admin/base.html.twig' %}

{% block title %}Modifier l'Article | TabibNet{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/article-admin.css') }}">
{% endblock %}

{% block body %}
<div class="article-admin-container">
    <a href="{{ path('app_article_index') }}" class="article-back-link">Retour à la liste</a>
    
    <div class="article-admin-header">
        <h1>Modifier l'Article</h1>
        <p class="article-admin-subtitle">Mettez à jour les informations de l'article</p>
    </div>

    <div class="article-form-card">
        {{ include('magazine-admin/article/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <div class="article-form-card" style="background: #fef2f2; border-left: 4px solid #ef4444;">
        <h3 style="color: #991b1b; margin: 0 0 12px 0; font-size: 16px;">Zone de danger</h3>
        <p style="color: #7f1d1d; margin: 0 0 16px 0; font-size: 14px;">Supprimer cet article de manière permanente.</p>
        {{ include('magazine-admin/article/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
