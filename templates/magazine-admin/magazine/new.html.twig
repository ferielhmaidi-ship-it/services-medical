{% extends 'magazine-admin/base.html.twig' %}

{% block title %}New Magazine{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'magazine-admin/magazine/_styles.html.twig' %}
{% endblock %}

{% block body_class %}magazine-page{% endblock %}

{% block body %}
    <section class="mag-shell">
        <div class="container">
            <div class="mag-header">
                <div>
                    <h1 class="mag-title">Create new magazine</h1>
                    <p class="mag-subtitle">Add a new issue with title, details, and status.</p>
                </div>
                <a class="mag-link" href="{{ path('app_magazine_index') }}">
                    <i class="bi bi-arrow-left me-2"></i>
                    Back to list
                </a>
            </div>

            <div class="mag-card mag-form">
                {{ include('magazine-admin/magazine/_form.html.twig') }}
            </div>
        </div>
    </section>
{% endblock %}
