{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form, {'attr': {'class': 'mag-form'}}) }}
    <div class="row g-3">
        <div class="col-lg-6">
            {{ form_row(form.title) }}
        </div>
        <div class="col-lg-6">
            {{ form_row(form.statut) }}
        </div>
        <div class="col-12">
            {{ form_row(form.description) }}
        </div>
        <div class="col-lg-8">
            {{ form_row(form.image) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(form.dateCreate) }}
        </div>
    </div>
    <div class="d-flex justify-content-end mt-4">
        <button class="btn btn-mag">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
