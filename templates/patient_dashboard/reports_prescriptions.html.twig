{% extends 'base.html.twig' %}

{% block title %}Rapports & Ordonnances - Espace Patient{% endblock %}

{% block body_class %}patient-reports-prescriptions{% endblock %}

{% block body %}
<style>
@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');

:root {
    --primary: #0f766e;
    --primary-dark: #0d9488;
    --primary-light: #14b8a6;
    --accent: #f59e0b;
    --danger: #ef4444;
    --success: #10b981;
    --bg-warm: #fafaf9;
    --surface: #ffffff;
    --text-primary: #1c1917;
    --text-secondary: #78716c;
    --text-muted: #a8a29e;
    --border: #e7e5e4;
    --shadow-soft: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-medium: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-large: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 24px;
}

.patient-reports-prescriptions {
    background: var(--bg-warm);
    font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
    min-height: 100vh;
    padding: 4rem 2rem;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

/* Header */
.page-header {
    margin-bottom: 3rem;
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.page-title {
    font-size: 2.25rem;
    font-weight: 800;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.02em;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.page-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin: 0;
    font-weight: 500;
}

/* Empty State */
.empty-state {
    background: var(--surface);
    border-radius: var(--radius-xl);
    padding: 4rem 2rem;
    text-align: center;
    box-shadow: var(--shadow-large);
    border: 2px dashed var(--border);
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.1s both;
}

.empty-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
    border: 2px solid #a7f3d0;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    margin: 0 auto 1.5rem;
}

.empty-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
}

.empty-text {
    color: var(--text-secondary);
    margin: 0;
}

/* Doctor Card */
.doctor-card {
    background: var(--surface);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-large);
    overflow: hidden;
    margin-bottom: 2rem;
    border: 1px solid var(--border);
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    animation-fill-mode: both;
}

.doctor-card:nth-child(2) { animation-delay: 0.1s; }
.doctor-card:nth-child(3) { animation-delay: 0.2s; }
.doctor-card:nth-child(4) { animation-delay: 0.3s; }

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Doctor Header */
.doctor-header {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 50%, #064e3b 100%);
    padding: 1.5rem 2rem;
    position: relative;
    overflow: hidden;
}

.doctor-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    border-radius: 50%;
    animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.1); opacity: 0.8; }
}

.doctor-info {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.doctor-avatar {
    width: 56px;
    height: 56px;
    background: rgba(255,255,255,0.15);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    border: 1px solid rgba(255,255,255,0.2);
    box-shadow: var(--shadow-medium);
    flex-shrink: 0;
}

.doctor-name {
    color: white;
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    letter-spacing: -0.01em;
}

.doctor-label {
    color: rgba(255,255,255,0.8);
    font-size: 0.875rem;
    margin: 0.25rem 0 0 0;
    font-weight: 500;
}

/* Card Body */
.card-body {
    padding: 2rem;
}

/* Empty Doctor State */
.empty-doctor {
    text-align: center;
    padding: 2rem;
    color: var(--text-muted);
    font-style: italic;
}

/* Appointment Block */
.appointment-block {
    background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
    border: 2px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
}

.appointment-block:nth-child(1) { animation-delay: 0.1s; }
.appointment-block:nth-child(2) { animation-delay: 0.2s; }
.appointment-block:nth-child(3) { animation-delay: 0.3s; }

@keyframes fadeIn {
    to { opacity: 1; }
}

.appointment-block:hover {
    border-color: var(--primary-light);
    box-shadow: var(--shadow-medium);
    transform: translateY(-2px);
}

.appointment-block.with-separator {
    border-bottom: 2px solid var(--border);
}

.appointment-block:last-child {
    margin-bottom: 0;
}

/* Appointment Header */
.appointment-header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border);
    gap: 1rem;
}

.appointment-date {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.status-scheduled {
    background: #fef3c7;
    color: #92400e;
}

.status-completed {
    background: #d1fae5;
    color: #065f46;
}

.status-cancelled {
    background: #fee2e2;
    color: #991b1b;
}

/* Content Grid */
.content-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
}

.content-grid.single-column {
    grid-template-columns: 1fr;
}

@media (max-width: 768px) {
    .content-grid {
        grid-template-columns: 1fr;
    }
}

/* Content Box */
.content-box {
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: var(--radius-md);
    padding: 1.25rem;
    height: 100%;
    transition: all 0.2s;
}

.content-box:hover {
    border-color: var(--primary-light);
}

.box-header {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--border);
}

.box-icon {
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    box-shadow: var(--shadow-soft);
    flex-shrink: 0;
}

.box-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
}

/* List Items */
.item-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.item-list li {
    background: #f8fafc;
    border-radius: var(--radius-md);
    padding: 1rem;
    margin-bottom: 0.75rem;
    border-left: 4px solid var(--primary-light);
    transition: all 0.2s;
    cursor: pointer;
}

.item-list li:hover {
    background: #f0fdf4;
    border-left-color: var(--primary);
}

.item-list li:last-child {
    margin-bottom: 0;
}

.item-label {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
    display: flex;
    align-items: center;
    gap: 0.375rem;
}

.item-value {
    font-size: 0.9375rem;
    color: var(--text-primary);
    font-weight: 600;
    line-height: 1.5;
    margin-bottom: 0.5rem;
}

.item-meta {
    font-size: 0.8125rem;
    color: var(--text-muted);
    display: flex;
    align-items: center;
    gap: 0.375rem;
    flex-wrap: wrap;
}

/* Empty Box State */
.empty-box {
    text-align: center;
    padding: 2rem 1rem;
    color: var(--text-muted);
}

.empty-box-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    opacity: 0.5;
}

.empty-box-text {
    font-size: 0.9375rem;
    font-style: italic;
    margin: 0;
}

.detail-link-btn {
    margin-left: auto;
    border: none;
    background: transparent;
    color: var(--primary);
    font-weight: 700;
    padding: 0;
    cursor: pointer;
    font-size: 0.8125rem;
}

.detail-link-btn:hover {
    color: var(--primary-dark);
    text-decoration: underline;
}

/* ============================================
   MODAL STYLES - RAPPORT & ORDONNANCE
   ============================================ */

.modal-content {
    border: none;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-large);
    overflow: hidden;
}

.modal-header {
    background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
    border-bottom: 1px solid #93c5fd;
    padding: 1.5rem 2rem;
}

.modal-header.ordonnance-header-bg {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-bottom: 1px solid #fcd34d;
}

.modal-title {
    font-weight: 800;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.modal-body {
    padding: 0;
    background: var(--bg-warm);
}

.btn-close {
    background: rgba(255,255,255,0.8);
    border-radius: 50%;
    padding: 0.5rem;
    opacity: 0.8;
}

.btn-close:hover {
    opacity: 1;
    background: white;
}

/* Hero Content in Modal */
.hero-content {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    margin-bottom: 1.5rem;
}

.hero-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    box-shadow: var(--shadow-medium);
    flex-shrink: 0;
}

.hero-icon.ordonnance-icon {
    background: linear-gradient(135deg, var(--accent) 0%, #d97706 100%);
}

.hero-text h1 {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--text-primary);
    margin: 0 0 0.25rem 0;
}

.hero-text p {
    color: var(--text-secondary);
    margin: 0 0 1rem 0;
    font-size: 0.9375rem;
}

/* Badge Group in Modal */
.badge-group {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    background: rgba(255,255,255,0.9);
    border: 1px solid var(--border);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
}

/* Progress Bar */
.progress-bar {
    display: flex;
    gap: 0.5rem;
    margin-top: 1.5rem;
}

.progress-step {
    flex: 1;
    height: 4px;
    background: rgba(0,0,0,0.1);
    border-radius: 2px;
}

.progress-step.completed {
    background: var(--success);
}

.progress-step.active {
    background: var(--primary);
    animation: pulseProgress 2s ease-in-out infinite;
}

.progress-step.active-ordonnance {
    background: var(--accent);
    animation: pulseProgress 2s ease-in-out infinite;
}

@keyframes pulseProgress {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
}

/* Report/Ordonnance Content in Modal */
.report-content, .ordonnance-content {
    padding: 2rem;
}

.info-card {
    background: linear-gradient(135deg, #dbeafe 0%, #eff6ff 100%);
    border: 1px solid #93c5fd;
    border-radius: var(--radius-md);
    padding: 1.25rem;
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    align-items: flex-start;
}

.info-card.ordonnance-info {
    background: linear-gradient(135deg, #fef3c7 0%, #fffbeb 100%);
    border-color: #fcd34d;
}

.info-icon {
    width: 40px;
    height: 40px;
    background: #3b82f6;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
}

.info-icon.ordonnance-info-icon {
    background: var(--accent);
}

.info-content {
    color: #1e40af;
    font-size: 0.9375rem;
    line-height: 1.6;
}

.info-content.ordonnance-text {
    color: #92400e;
}

.info-content strong {
    display: block;
    margin-bottom: 0.25rem;
    color: #1e3a8a;
}

.info-content.ordonnance-text strong {
    color: #78350f;
}

/* Data Grid in Modal */
.data-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

.data-card {
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: var(--radius-md);
    padding: 1.5rem;
    transition: all 0.3s ease;
}

.data-card:hover {
    border-color: var(--primary-light);
    box-shadow: var(--shadow-medium);
    transform: translateY(-2px);
}

.data-card.full-width {
    grid-column: 1 / -1;
}

.data-card.appointment-card {
    background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
    border-color: #a7f3d0;
}

.card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.card-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
}

.card-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
}

.card-subtitle {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin: 0.25rem 0 0 0;
}

.data-field {
    margin-top: 1rem;
}

.field-label {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
}

.field-value {
    font-size: 0.9375rem;
    color: var(--text-primary);
    font-weight: 600;
    line-height: 1.6;
}

.field-value.empty {
    color: var(--text-muted);
    font-style: italic;
}

.field-value.long-text {
    background: #f8fafc;
    padding: 1rem;
    border-radius: var(--radius-sm);
    border-left: 3px solid var(--primary-light);
    white-space: pre-wrap;
}

/* Actions in Modal */
.report-actions, .ordonnance-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 2px solid var(--border);
    flex-wrap: wrap;
    gap: 1rem;
}

.status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 500;
}

.status-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: blink 2s ease-in-out infinite;
}

@keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
}

.btn-secondary {
    background: var(--surface);
    color: var(--text-primary);
    border: 2px solid var(--border);
}

.btn-secondary:hover {
    background: #f8fafc;
    border-color: var(--primary-light);
    transform: translateY(-1px);
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    box-shadow: var(--shadow-soft);
}

.btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-medium);
}

/* Responsive */
@media (max-width: 768px) {
    .patient-reports-prescriptions {
        padding: 2rem 1rem;
    }
    
    .page-title {
        font-size: 1.75rem;
        flex-direction: column;
        align-items: flex-start;
    }
    
    .doctor-header {
        padding: 1.25rem;
    }
    
    .card-body {
        padding: 1.25rem;
    }
    
    .appointment-header {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .appointment-block {
        padding: 1.25rem;
    }
    
    .hero-content {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    
    .data-grid {
        grid-template-columns: 1fr;
    }
    
    .report-actions, .ordonnance-actions {
        flex-direction: column-reverse;
        width: 100%;
    }
    
    .btn {
        width: 100%;
        justify-content: center;
    }
    
    .modal-dialog {
        margin: 0.5rem;
    }
    
    .report-content, .ordonnance-content {
        padding: 1.25rem;
    }
}
</style>

<div class="patient-reports-prescriptions">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">
                <span>üìã</span>
                Rapports & Ordonnances
            </h1>
            <p class="page-subtitle">Consultez l'historique de vos consultations m√©dicales</p>
        </div>

        {% if doctorGroups is empty %}
            <p>Aucun ordonnace & rapport</p>
        {% else %}
            {% for group in doctorGroups %}
                <!-- Doctor Card -->
                <div class="doctor-card">
                    <!-- Doctor Header -->
                    <div class="doctor-header">
                        <div class="doctor-info">
                            <div class="doctor-avatar">üë®‚Äç‚öïÔ∏è</div>
                            <div>
                                <h2 class="doctor-name">Dr. {{ group.doctor.firstName }} {{ group.doctor.lastName }}</h2>
                                <p class="doctor-label">M√©decin traitant</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Card Body -->
                    <div class="card-body">
                        {% if group.appointments is empty %}
                            <div class="empty-doctor">
                                <span>üìÖ</span> Aucun rendez-vous enregistr√© avec ce m√©decin.
                            </div>
                        {% else %}
                            {% for entry in group.appointments %}
                                {% set hasRapports = entry.rapports is not empty %}
                                {% set hasOrdonnances = entry.ordonnances is not empty %}
                                {% if hasRapports or hasOrdonnances %}
                                <!-- Appointment Block -->
                                <div class="appointment-block {% if not loop.last %}with-separator{% endif %}">
                                    <!-- Appointment Header -->
                                    <div class="appointment-header">
                                        <h3 class="appointment-date">
                                            <span>üìÖ</span>
                                            {{ entry.appointment.date ? entry.appointment.date|date('d/m/Y') : '-' }}
                                            {{ entry.appointment.startTime ? ' √† ' ~ entry.appointment.startTime|date('H:i') : '' }}
                                        </h3>
                                        <span class="status-badge status-{{ entry.appointment.status|default('scheduled') }}">
                                            {% if entry.appointment.status == 'scheduled' %}
                                                <span>‚è∞</span> Planifi√©
                                            {% elseif entry.appointment.status == 'completed' %}
                                                <span>‚úÖ</span> Termin√©
                                            {% elseif entry.appointment.status == 'cancelled' %}
                                                <span>‚ùå</span> Annul√©
                                            {% else %}
                                                <span>üìã</span> {{ entry.appointment.status|replace({'_': ' '})|title }}
                                            {% endif %}
                                        </span>
                                    </div>

                                    <!-- Content Grid -->
                                    <div class="content-grid {{ (hasRapports and hasOrdonnances) ? '' : 'single-column' }}">
                                        <!-- Rapports -->
                                        {% if hasRapports %}
