{% extends 'base.html.twig' %}

{% block title %}Recherche d'Articles{% endblock %}

{% block body %}
<style>
    :root {
        --search-primary: #6366f1;
        --search-primary-dark: #4f46e5;
        --search-secondary: #ec4899;
        --search-accent: #f59e0b;
        --search-dark: #0f172a;
        --search-gray: #64748b;
        --search-light: #f8fafc;
        --search-border: #e2e8f0;
        --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Search Hero */
    .search-hero {
        position: relative;
        padding: 80px 0 60px;
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #f5f3ff 100%);
        overflow: hidden;
    }

    .search-hero::before {
        content: '';
        position: absolute;
        top: -30%;
        right: -10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(99, 102, 241, 0.12) 0%, transparent 70%);
        animation: float 20s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        50% { transform: translate(-20px, 20px) scale(1.05); }
    }

    .search-container {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .search-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: linear-gradient(135deg, #e0e7ff 0%, #ddd6fe 100%);
        color: var(--search-primary-dark);
        font-size: 13px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        border-radius: 30px;
        margin-bottom: 24px;
        border: 1px solid rgba(99, 102, 241, 0.2);
    }

    .search-title {
        font-size: clamp(32px, 5vw, 48px);
        font-weight: 800;
        color: var(--search-dark);
        letter-spacing: -0.03em;
        margin-bottom: 16px;
        line-height: 1.2;
    }

    .search-title span {
        background: linear-gradient(135deg, var(--search-primary) 0%, var(--search-secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .search-subtitle {
        font-size: 17px;
        color: var(--search-gray);
        margin-bottom: 40px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Search Form */
    .search-form-wrapper {
        position: relative;
    }

    .search-form {
        position: relative;
        display: flex;
        align-items: center;
        gap: 12px;
        background: #fff;
        border-radius: 20px;
        padding: 8px;
        box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(0, 0, 0, 0.05);
        transition: var(--transition);
    }

    .search-form:focus-within {
        box-shadow: 0 20px 50px -10px rgba(99, 102, 241, 0.25), 0 0 0 2px rgba(99, 102, 241, 0.2);
        transform: translateY(-2px);
    }

    .search-input-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--search-gray);
        font-size: 20px;
        transition: var(--transition);
    }

    .search-form:focus-within .search-input-icon {
        color: var(--search-primary);
    }

    .search-input {
        flex: 1;
        border: none;
        background: transparent;
        padding: 16px;
        font-size: 17px;
        color: var(--search-dark);
        outline: none;
    }

    .search-input::placeholder {
        color: #94a3b8;
    }

    .search-btn {
        padding: 16px 32px;
        background: linear-gradient(135deg, var(--search-primary) 0%, var(--search-secondary) 100%);
        color: #fff;
        border: none;
        border-radius: 14px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 10px;
        white-space: nowrap;
    }

    .search-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(99, 102, 241, 0.4);
    }

    .search-btn i {
        transition: transform 0.3s;
    }

    .search-btn:hover i {
        transform: rotate(90deg);
    }

    /* Quick Filters */
    .quick-filters {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin-top: 24px;
    }

    .filter-chip {
        padding: 8px 16px;
        background: #fff;
        border: 1px solid var(--search-border);
        border-radius: 30px;
        font-size: 13px;
        color: var(--search-gray);
        text-decoration: none;
        transition: var(--transition);
        cursor: pointer;
    }

    .filter-chip:hover,
    .filter-chip.active {
        background: var(--search-primary);
        color: #fff;
        border-color: var(--search-primary);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    /* Results Section */
    .results-section {
        padding: 60px 0 100px;
        background: #fff;
        min-height: 400px;
    }

    .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
        flex-wrap: wrap;
        gap: 16px;
    }

    .results-count {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .results-count h3 {
        font-size: 24px;
        font-weight: 700;
        color: var(--search-dark);
        margin: 0;
    }

    .results-badge {
        padding: 6px 14px;
        background: linear-gradient(135deg, #e0e7ff 0%, #ddd6fe 100%);
        color: var(--search-primary-dark);
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
    }

    .clear-search {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: #f1f5f9;
        color: var(--search-gray);
        border-radius: 10px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: var(--transition);
    }

    .clear-search:hover {
        background: #e2e8f0;
        color: var(--search-dark);
    }

    /* Article Cards */
    .article-card {
        display: flex;
        gap: 24px;
        background: #fff;
        border-radius: 20px;
        padding: 24px;
        margin-bottom: 20px;
        border: 1px solid var(--search-border);
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

    .article-card::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 4px;
        background: linear-gradient(180deg, var(--search-primary), var(--search-secondary));
        transform: scaleY(0);
        transition: transform 0.3s;
    }

    .article-card:hover {
        transform: translateX(8px);
        box-shadow: 0 12px 30px -10px rgba(0, 0, 0, 0.1);
        border-color: #cbd5e1;
    }

    .article-card:hover::before {
        transform: scaleY(1);
    }

    .article-image {
        width: 140px;
        height: 140px;
        border-radius: 16px;
        overflow: hidden;
        flex-shrink: 0;
        background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
    }

    .article-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .article-card:hover .article-image img {
        transform: scale(1.1);
    }

    .article-image-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #94a3b8;
        font-size: 32px;
    }

    .article-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .article-meta {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 12px;
        flex-wrap: wrap;
    }

    .magazine-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
        color: #1d4ed8;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: var(--transition);
    }

    .magazine-badge:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(29, 78, 216, 0.2);
    }

    .article-date {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 13px;
        color: var(--search-gray);
    }

    .article-date i {
        color: var(--search-primary);
    }

    .article-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--search-dark);
        margin-bottom: 12px;
        line-height: 1.4;
        text-decoration: none;
        display: block;
        transition: color 0.3s;
    }

    .article-title:hover {
        color: var(--search-primary);
    }

    .article-excerpt {
        font-size: 15px;
        color: var(--search-gray);
        line-height: 1.7;
        margin-bottom: 16px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .article-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: auto;
    }

    .article-author {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .author-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--search-primary), var(--search-secondary));
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 12px;
        font-weight: 700;
    }

    .author-name {
        font-size: 13px;
        color: var(--search-gray);
        font-weight: 500;
    }

    .btn-read-more {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: transparent;
        color: var(--search-primary);
        border: 2px solid var(--search-primary);
        border-radius: 10px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        transition: var(--transition);
    }

    .btn-read-more:hover {
        background: var(--search-primary);
        color: #fff;
        transform: translateX(4px);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 24px;
    }

    .empty-icon {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 32px;
        color: #94a3b8;
        font-size: 48px;
        position: relative;
    }

    .empty-icon::after {
        content: '';
        position: absolute;
        inset: -10px;
        border: 2px dashed #cbd5e1;
        border-radius: 50%;
        animation: rotate 20s linear infinite;
    }

    @keyframes rotate {
        to { transform: rotate(360deg); }
    }

    .empty-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--search-dark);
        margin-bottom: 12px;
    }

    .empty-text {
        font-size: 16px;
        color: var(--search-gray);
        margin-bottom: 32px;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .search-term {
        display: inline-block;
        padding: 4px 12px;
        background: #f1f5f9;
        border-radius: 6px;
        font-family: monospace;
        color: var(--search-primary);
        font-weight: 600;
    }

    /* Loading State */
    .skeleton {
        background: linear-gradient(90deg, #f1f5f9 25%, #e2e8f0 50%, #f1f5f9 75%);
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
        border-radius: 8px;
    }

    @keyframes loading {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }

    /* Animations */
    @keyframes slideUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .article-card {
        animation: slideUp 0.5s ease-out forwards;
    }

    .article-card:nth-child(1) { animation-delay: 0.05s; }
    .article-card:nth-child(2) { animation-delay: 0.1s; }
    .article-card:nth-child(3) { animation-delay: 0.15s; }
    .article-card:nth-child(4) { animation-delay: 0.2s; }
    .article-card:nth-child(5) { animation-delay: 0.25s; }

    /* Responsive */
    @media (max-width: 768px) {
        .search-hero {
            padding: 60px 0 40px;
        }

        .search-form {
            flex-direction: column;
            padding: 16px;
        }

        .search-btn {
            width: 100%;
            justify-content: center;
        }

        .article-card {
            flex-direction: column;
            gap: 16px;
        }

        .article-image {
            width: 100%;
            height: 200px;
        }

        .results-header {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<!-- Search Hero -->
<section class="search-hero">
    <div class="container">
        <div class="search-container">
            <div class="search-badge">
                <i class="fas fa-search"></i>
                Recherche Avancée
            </div>
            <h1 class="search-title">
                Trouvez vos <span>articles</span>
            </h1>
            <p class="search-subtitle">
                Explorez notre base de connaissances médicales et scientifiques. 
                Recherchez par titre, contenu ou thématique.
            </p>
            
            <div class="search-form-wrapper">
                <form method="get" action="{{ path('front_articles_search') }}" class="search-form">
                    <div class="search-input-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <input 
                        type="text" 
                        name="search" 
                        class="search-input" 
                        placeholder="Rechercher un article par titre, contenu..."
                        value="{{ searchTerm|default('') }}"
                        autocomplete="off"
                    >
                    <button type="submit" class="search-btn">
                        <i class="fas fa-search"></i>
                        Rechercher
                    </button>
                </form>
            </div>

            <!-- Quick Filters -->
            <div class="quick-filters">
                <a href="{{ path('front_articles_search', {search: 'santé'}) }}" class="filter-chip {{ searchTerm == 'santé' ? 'active' : '' }}">Santé</a>
                <a href="{{ path('front_articles_search', {search: 'nutrition'}) }}" class="filter-chip {{ searchTerm == 'nutrition' ? 'active' : '' }}">Nutrition</a>
                <a href="{{ path('front_articles_search', {search: 'sport'}) }}" class="filter-chip {{ searchTerm == 'sport' ? 'active' : '' }}">Sport</a>
                <a href="{{ path('front_articles_search', {search: 'bien-être'}) }}" class="filter-chip {{ searchTerm == 'bien-être' ? 'active' : '' }}">Bien-être</a>
                <a href="{{ path('front_articles_search', {search: 'médecine'}) }}" class="filter-chip {{ searchTerm == 'médecine' ? 'active' : '' }}">Médecine</a>
            </div>
        </div>
    </div>
</section>

<!-- Results Section -->
<section class="results-section">
    <div class="container">
        {% if searchTerm %}
            <div class="results-header">
                <div class="results-count">
                    <h3>
                        {% if articles|length > 0 %}
                            {{ articles|length }} résultat{{ articles|length > 1 ? 's' : '' }} trouvé{{ articles|length > 1 ? 's' : '' }}
                        {% else %}
                            Aucun résultat
                        {% endif %}
                    </h3>
                    <span class="results-badge">
                        <i class="fas fa-quote-left"></i>
                        {{ searchTerm }}
                    </span>
                </div>
                <a href="{{ path('front_articles_search') }}" class="clear-search">
                    <i class="fas fa-times"></i>
                    Nouvelle recherche
                </a>
            </div>

            {% if articles|length > 0 %}
                <div class="articles-list">
                    {% for article in articles %}
                        <article class="article-card">
                            <div class="article-image">
                                {% if article.image %}
                                    <img src="{{ asset('uploads/' ~ article.image) }}" alt="{{ article.title }}">
                                {% else %}
                                    <div class="article-image-placeholder">
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="article-content">
                                <div class="article-meta">
                                    <a href="{{ path('front_magazine_show', {id: article.magazine.id}) }}" class="magazine-badge">
                                        <i class="fas fa-book"></i>
                                        {{ article.magazine.title }}
                                    </a>
                                    <span class="article-date">
                                        <i class="fas fa-calendar-alt"></i>
                                        {{ article.datePub|date('d F Y') }}
                                    </span>
                                </div>
                                <a href="{{ path('front_article_show', {magazineId: article.magazine.id, id: article.id}) }}" class="article-title">
                                    {{ article.title }}
                                </a>
                                <p class="article-excerpt">
                                    {{ article.resume|default(article.contenu|slice(0, 200) ~ '...') }}
                                </p>
                                <div class="article-footer">
                                    <div class="article-author">
                                        <div class="author-avatar">
                                            {{ article.auteur|slice(0, 1)|upper }}
                                        </div>
                                        <span class="author-name">Par {{ article.auteur }}</span>
                                    </div>
                                    <a href="{{ path('front_article_show', {magazineId: article.magazine.id, id: article.id}) }}" class="btn-read-more">
                                        Lire l'article
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3 class="empty-title">Aucun article trouvé</h3>
                    <p class="empty-text">
                        Nous n'avons trouvé aucun article correspondant à 
                        <span class="search-term">{{ searchTerm }}</span>
                    </p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a href="{{ path('front_articles_search') }}" class="btn btn-primary" style="padding: 12px 24px; border-radius: 10px; font-weight: 600;">
                            <i class="fas fa-undo me-2"></i>Nouvelle recherche
                        </a>
                        <a href="{{ path('front_magazine_index') }}" class="btn btn-outline-primary" style="padding: 12px 24px; border-radius: 10px; font-weight: 600;">
                            <i class="fas fa-book me-2"></i>Voir les magazines
                        </a>
                    </div>
                </div>
            {% endif %}
        {% else %}
            <!-- Initial State - No Search -->
            <div class="empty-state">
                <div class="empty-icon" style="background: linear-gradient(135deg, #e0e7ff 0%, #ddd6fe 100%); color: var(--search-primary);">
                    <i class="fas fa-search-plus"></i>
                </div>
                <h3 class="empty-title">Commencez votre recherche</h3>
                <p class="empty-text">
                    Entrez un terme de recherche ci-dessus pour découvrir nos articles médicaux et scientifiques.
                </p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <span class="text-muted">
                        <i class="fas fa-lightbulb text-warning me-2"></i>
                        Essayez : "nutrition", "cardiologie", "bien-être"...
                    </span>
                </div>
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}