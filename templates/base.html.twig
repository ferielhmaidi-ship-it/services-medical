<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>{% block title %}Tabibnet{% endblock %}</title>
  <meta name="description" content="{% block description %}{% endblock %}">
  <meta name="keywords" content="{% block keywords %}{% endblock %}">

  <!-- Favicons -->
  <link href="{{ asset('img/favicon.png', 'theme') }}" rel="icon">
  <link href="{{ asset('img/apple-touch-icon.png', 'theme') }}" rel="apple-touch-icon">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect">
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css', 'theme') }}" rel="stylesheet">
  <link href="{{ asset('vendor/bootstrap-icons/bootstrap-icons.css', 'theme') }}" rel="stylesheet">
  <link href="{{ asset('vendor/aos/aos.css', 'theme') }}" rel="stylesheet">
  <link href="{{ asset('vendor/glightbox/css/glightbox.min.css', 'theme') }}" rel="stylesheet">
  <link href="{{ asset('vendor/fontawesome-free/css/all.min.css', 'theme') }}" rel="stylesheet">
  <link href="{{ asset('vendor/swiper/swiper-bundle.min.css', 'theme') }}" rel="stylesheet">

  <!-- Main CSS File -->
  <link href="{{ asset('css/main.css', 'theme') }}" rel="stylesheet">

  {% block stylesheets %}{% endblock %}
</head>

<body class="{% block body_class %}{% endblock %}">

  {% include 'partials/_header.html.twig' %}

  <main class="main">
    {% block body %}{% endblock %}
  </main>

  {% include 'partials/_footer.html.twig' %}

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>

  <!-- Vendor JS Files -->
  <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js', 'theme') }}"></script>
  <script src="{{ asset('vendor/php-email-form/validate.js', 'theme') }}"></script>
  <script src="{{ asset('vendor/aos/aos.js', 'theme') }}"></script>
  <script src="{{ asset('vendor/glightbox/js/glightbox.min.js', 'theme') }}"></script>
  <script src="{{ asset('vendor/purecounter/purecounter_vanilla.js', 'theme') }}"></script>
  <script src="{{ asset('vendor/imagesloaded/imagesloaded.pkgd.min.js', 'theme') }}"></script>
  <script src="{{ asset('vendor/isotope-layout/isotope.pkgd.min.js', 'theme') }}"></script>
  <script src="{{ asset('vendor/swiper/swiper-bundle.min.js', 'theme') }}"></script>

  <!-- Main JS File -->
  <script src="{{ asset('js/main.js', 'theme') }}"></script>

  {% block javascripts %}{% endblock %}

</body>

</html>
