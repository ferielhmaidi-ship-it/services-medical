{% extends 'base.html.twig' %}

{% block title %}Inscription - TabibNet{% endblock %}

{% block body_class %}register-page{% endblock %}

{% block body %}
<!-- Register Hero Section -->
<section class="register-hero section position-relative overflow-hidden">
    <div class="container position-relative z-2">
        <div class="row justify-content-center">
            <div class="col-lg-10" data-aos="fade-up">
                <!-- Header -->
                <div class="text-center mb-5">
                    <div class="register-icon mb-3">
                        <i class="fas fa-user-plus text-primary" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="display-5 fw-bold mb-2">Rejoignez TabibNet</h1>
                    <p class="lead text-muted">Choisissez votre type de compte pour commencer</p>
                </div>

                <!-- Choice Cards -->
                <div class="row g-4 justify-content-center">
                    <!-- Patient Card -->
                    <div class="col-lg-5 col-md-6">
                        <div class="card choice-card border-0 shadow-lg h-100">
                            <div class="card-body text-center p-4 p-lg-5">
                                <div class="choice-icon-wrapper mb-4">
                                    <span class="choice-icon bg-primary-soft text-primary">
                                        <i class="fas fa-user-injured"></i>
                                    </span>
                                </div>
                                <h3 class="card-title fw-bold mb-3">Patient</h3>
                                <p class="card-text text-muted mb-4">
                                    Inscrivez-vous en tant que patient pour prendre des rendez-vous,
                                    gérer vos dossiers médicaux et communiquer avec vos médecins.
                                </p>
                                <div class="feature-list text-start mb-4">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Prise de rendez-vous en ligne</span>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Dossiers médicaux sécurisés</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Messagerie avec les médecins</span>
                                    </div>
                                </div>
                                <a href="{{ path('register_patient') }}" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-user-plus me-2"></i>S'inscrire comme Patient
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Doctor Card -->
                    <div class="col-lg-5 col-md-6">
                        <div class="card choice-card border-0 shadow-lg h-100">
                            <div class="card-body text-center p-4 p-lg-5">
                                <div class="choice-icon-wrapper mb-4">
                                    <span class="choice-icon bg-success-soft text-success">
                                        <i class="fas fa-user-md"></i>
                                    </span>
                                </div>
                                <h3 class="card-title fw-bold mb-3">Médecin</h3>
                                <p class="card-text text-muted mb-4">
                                    Inscrivez-vous en tant que professionnel de santé pour gérer votre cabinet,
                                    vos rendez-vous et offrir des soins de qualité à vos patients.
                                </p>
                                <div class="feature-list text-start mb-4">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Gestion d'agenda en ligne</span>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Profil professionnel vérifié</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>Suivi des patients</span>
                                    </div>
                                </div>
                                <a href="{{ path('register_medecin') }}" class="btn btn-success btn-lg w-100">
                                    <i class="fas fa-user-md me-2"></i>S'inscrire comme Médecin
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Login Link -->
                <div class="text-center mt-5">
                    <div class="login-prompt p-4 bg-white bg-opacity-75 rounded-3 shadow-sm d-inline-block">
                        <p class="mb-0">
                            <span class="text-muted">Vous avez déjà un compte ?</span>
                            <a href="{{ path('app_login') }}" class="fw-bold text-primary text-decoration-none ms-2">
                                Connectez-vous <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Background decoration -->
    <div class="position-absolute top-0 start-0 w-100 h-100 z-1">
        <div class="bg-blur-1"></div>
        <div class="bg-blur-2"></div>
    </div>
</section>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
/* Register Page Specific Styles */
.register-page {
    background-color: #f8fafc;
}

.register-hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 100px 0;
    position: relative;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
}

.register-hero .bg-blur-1 {
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: rgba(102, 126, 234, 0.1);
    filter: blur(60px);
    top: -150px;
    right: -150px;
}

.register-hero .bg-blur-2 {
    position: absolute;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background: rgba(118, 75, 162, 0.1);
    filter: blur(80px);
    bottom: -200px;
    left: -200px;
}

/* Choice Cards */
.choice-card {
    border-radius: 24px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.choice-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #667eea, #764ba2);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.choice-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15) !important;
}

.choice-card:hover::before {
    opacity: 1;
}

.choice-card:nth-child(2)::before {
    background: linear-gradient(90deg, #10b981, #059669);
}

/* Choice Icons */
.choice-icon-wrapper {
    display: inline-block;
}

.choice-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    font-size: 3rem;
    transition: all 0.3s ease;
}

.choice-card:hover .choice-icon {
    transform: scale(1.1);
}

.bg-primary-soft {
    background: rgba(102, 126, 234, 0.15);
}

.bg-success-soft {
    background: rgba(16, 185, 129, 0.15);
}

/* Feature List */
.feature-list {
    font-size: 0.95rem;
}

.feature-list i {
    font-size: 0.9rem;
}

/* Buttons */
.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 12px;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.btn-success {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border: none;
    border-radius: 12px;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
}

/* Login Prompt */
.login-prompt {
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Responsive */
@media (max-width: 768px) {
    .register-hero {
        padding: 80px 0;
    }

    .choice-icon {
        width: 80px;
        height: 80px;
        font-size: 2.5rem;
    }

    .choice-card .card-body {
        padding: 2rem !important;
    }
}

@media (max-width: 576px) {
    .choice-icon {
        width: 70px;
        height: 70px;
        font-size: 2rem;
    }

    .btn-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }
}
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animate cards on load
    const cards = document.querySelectorAll('.choice-card');
    cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
            card.style.transition = 'all 0.6s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, 100 + (index * 200)); // Staggered animation
    });

    // Hover effect for icons (optional)
    const icons = document.querySelectorAll('.choice-icon');
    icons.forEach(icon => {
        icon.addEventListener('mouseenter', function() {
            this.style.transform = 'scale(1.1)';
        });
        icon.addEventListener('mouseleave', function() {
            this.style.transform = 'scale(1)';
        });
    });
});
</script>
{% endblock %}
