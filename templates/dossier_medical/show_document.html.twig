    font-size: 0.8125rem;
    color: var(--primary-dark);
    background: rgba(15, 118, 110, 0.1);
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-sm);
    display: inline-block;
}

/* Actions */
.document-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 2px solid var(--border);
    position: sticky;
    bottom: 0;
    background: var(--surface);
    z-index: 10;
}

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: 1rem 2rem;
    border-radius: var(--radius-md);
    font-size: 0.9375rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:active::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    box-shadow: 0 4px 14px 0 rgba(13, 148, 136, 0.39);
    flex: 1;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(13, 148, 136, 0.23);
}

.btn-secondary {
    background: var(--surface);
    color: var(--text-secondary);
    border: 2px solid var(--border);
    flex: 0 0 auto;
}

.btn-secondary:hover {
    border-color: var(--text-muted);
    color: var(--text-primary);
    background: var(--bg-warm);
}

/* Status indicator */
.status-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-right: auto;
}

.status-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: blink 2s infinite;
}

@keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

/* Responsive */
@media (max-width: 768px) {
    .document-viewer {
        padding: 4rem 1rem;
    }
    
    .document-container {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
    
    .document-header {
        padding: 2rem 1.5rem;
    }
    
    .header-icon {
        width: 64px;
        height: 64px;
        font-size: 2rem;
    }
    
    .header-content h1 {
        font-size: 1.5rem;
    }
    
    .document-body {
        padding: 1.5rem;
    }
    
    .data-grid, .meta-grid {
        grid-template-columns: 1fr;
        gap: 1.25rem;
    }
    
    .document-actions {
        flex-direction: column-reverse;
    }
    
    .btn {
        width: 100%;
    }
    
    .info-card {
        flex-direction: column;
        text-align: center;
    }
    
    .status-indicator {
        margin-right: 0;
        margin-bottom: 1rem;
        justify-content: center;
    }
}
</style>

