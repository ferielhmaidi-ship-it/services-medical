<style>
@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');

:root {
    --primary: #0f766e;
    --primary-dark: #0d9488;
    --primary-light: #14b8a6;
    --accent: #f59e0b;
    --danger: #ef4444;
    --success: #10b981;
    --info: #3b82f6;
    --bg-warm: #fafaf9;
    --surface: #ffffff;
    --text-primary: #1c1917;
    --text-secondary: #78716c;
    --text-muted: #a8a29e;
    --border: #e7e5e4;
    --shadow-soft: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-medium: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-large: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 24px;
}

.document-viewer {
    min-height: {{ isEmbed ? 'auto' : '100vh' }};
    background: {{ isEmbed ? 'transparent' : 'var(--bg-warm)' }};
    padding: {{ isEmbed ? '0' : '6rem 2rem' }};
    font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 1.6;
}

.document-container {
    width: 100%;
    max-width: 800px;
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    margin-top: 3rem;
    margin-bottom: 3rem;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.document-card {
    background: var(--surface);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-large);
    overflow: hidden;
    border: 1px solid var(--border);
}

/* Header avec gradient organique */
.document-header {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 50%, #064e3b 100%);
    padding: 3rem 2.5rem;
    position: relative;
    overflow: hidden;
    text-align: center;
}

.document-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    border-radius: 50%;
    animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.1); opacity: 0.8; }
}

.header-icon {
    width: 80px;
    height: 80px;
    background: rgba(255,255,255,0.15);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    border: 1px solid rgba(255,255,255,0.2);
    box-shadow: var(--shadow-medium);
    margin: 0 auto 1.5rem;
    position: relative;
    z-index: 1;
}

.header-content h1 {
    color: white;
    font-size: 2rem;
    font-weight: 800;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
    position: relative;
    z-index: 1;
}

.header-content p {
    color: rgba(255,255,255,0.8);
    font-size: 1rem;
    margin: 0;
    font-weight: 500;
    position: relative;
    z-index: 1;
}

/* Badge */
.badge-group {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    position: relative;
    z-index: 1;
}

.badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255,255,255,0.15);
    backdrop-filter: blur(10px);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(255,255,255,0.9);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid rgba(255,255,255,0.2);
}

/* Progress bar */
.progress-bar {
    display: flex;
    gap: 0.5rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    position: relative;
    z-index: 1;
}

.progress-step {
    flex: 1;
    height: 4px;
    background: rgba(255,255,255,0.2);
    border-radius: 2px;
}

.progress-step.completed {
    background: rgba(255,255,255,0.6);
}

.progress-step.active {
    background: var(--accent);
    box-shadow: 0 0 10px rgba(245, 158, 11, 0.5);
}

/* Body */
.document-body {
    padding: 2.5rem;
    background: var(--surface);
}

/* Info Card */
.info-card {
    background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
    border: 2px solid #a7f3d0;
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    margin-bottom: 2.5rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    animation: fadeIn 0.5s ease-out 0.1s forwards;
    opacity: 0;
}

.info-icon {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
    color: white;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
    box-shadow: var(--shadow-medium);
}

.info-content {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
}

.info-content strong {
    color: var(--primary-dark);
    display: block;
    margin-bottom: 0.25rem;
    font-size: 1rem;
    font-weight: 700;
}

/* Data Grid */
.data-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 2.5rem;
}

.data-item {
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    transition: all 0.3s ease;
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
}

.data-item:nth-child(1) { animation-delay: 0.1s; }
.data-item:nth-child(2) { animation-delay: 0.2s; }
.data-item:nth-child(3) { animation-delay: 0.3s; }
.data-item:nth-child(4) { animation-delay: 0.4s; }
.data-item:nth-child(5) { animation-delay: 0.5s; }

@keyframes fadeIn {
    to { opacity: 1; }
}

.data-item:hover {
    border-color: var(--primary-light);
    box-shadow: var(--shadow-medium);
    transform: translateY(-2px);
}

.data-item.full-width {
    grid-column: 1 / -1;
}

.item-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--border);
}

.item-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    box-shadow: var(--shadow-medium);
    flex-shrink: 0;
}

.item-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
}

.item-label {
