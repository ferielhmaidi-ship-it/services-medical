}

.item-value.empty {
    color: var(--text-muted);
    font-style: italic;
    font-weight: 500;
    border-left-color: var(--border);
}

/* Meta Section */
.meta-section {
    background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
    border: 2px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    margin-bottom: 2.5rem;
}

.meta-header {
