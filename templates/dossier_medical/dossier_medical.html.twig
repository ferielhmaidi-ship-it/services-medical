{% extends 'base.html.twig' %}

{% block body %}

<style>
:root {
    --primary: #2563eb;
    --primary-dark: #1d4ed8;
    --success: #059669;
    --success-dark: #047857;
    --danger: #dc2626;
    --warning: #d97706;
    --info: #0891b2;
    --gray-50: #f8fafc;
    --gray-100: #f1f5f9;
    --gray-200: #e2e8f0;
    --gray-300: #cbd5e1;
    --gray-400: #94a3b8;
    --gray-500: #64748b;
    --gray-600: #475569;
    --gray-700: #334155;
    --gray-800: #1e293b;
    --gray-900: #0f172a;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --radius: 0.5rem;
    --radius-lg: 0.75rem;
}

.page {
    min-height: 100vh;
    background: var(--gray-50);
    /* TRANSLATION VERS LE BAS : 8rem au lieu de 2rem */
    padding: 8rem 1rem 4rem;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
}

/* Header Card */
.header-card {
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    padding: 2rem;
    margin-bottom: 2rem;
    border: 1px solid var(--gray-200);
}

.header-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.title-section h1 {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--gray-900);
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.025em;
}

.subtitle {
    color: var(--gray-500);
    font-size: 0.875rem;
    font-weight: 500;
}

.patient-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gray-100);
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    font-size: 0.875rem;
    color: var(--gray-600);
    font-weight: 500;
    border: 1px solid var(--gray-200);
}

.patient-badge span {
    color: var(--gray-900);
    font-weight: 600;
}

/* Action Buttons */
.action-bar {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border-radius: var(--radius);
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: var(--shadow-sm);
}

.btn-primary {
    background: var(--primary);
    color: white;
}

.btn-primary:hover {
    background: var(--primary-dark);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.btn-success {
    background: var(--success);
    color: white;
}

.btn-success:hover {
    background: var(--success-dark);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

/* Section Cards */
.section-card {
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--gray-200);
    margin-bottom: 2rem;
    overflow: hidden;
}

.section-header {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--gray-200);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: linear-gradient(to right, white, var(--gray-50));
}

.section-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--gray-800);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.section-title::before {
    content: '';
    width: 4px;
    height: 1.5rem;
    background: var(--primary);
    border-radius: 2px;
}

.count-badge {
    background: var(--gray-100);
    color: var(--gray-600);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
}

/* Tables */
.table-container {
    overflow-x: auto;
    padding: 0 2rem 2rem;
}

table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    font-size: 0.875rem;
}

thead {
    position: sticky;
    top: 0;
}

th {
    background: var(--gray-50);
    color: var(--gray-700);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    padding: 1rem 0.75rem;
    text-align: left;
    border-bottom: 2px solid var(--gray-200);
    white-space: nowrap;
}

td {
    padding: 1rem 0.75rem;
    border-bottom: 1px solid var(--gray-200);
    color: var(--gray-700);
    vertical-align: top;
}

tbody tr:hover {
    background: var(--gray-50);
    transition: background 0.15s ease;
}

tbody tr:last-child td {
    border-bottom: none;
}

/* Table Cell Content */
.cell-id {
    font-family: 'SF Mono', Monaco, monospace;
    font-weight: 600;
    color: var(--gray-900);
    font-size: 0.8125rem;
}

.cell-text {
    max-width: 200px;
    line-height: 1.5;
    color: var(--gray-600);
}

.cell-date {
    white-space: nowrap;
    color: var(--gray-500);
    font-weight: 500;
}

/* Action Buttons in Table */
.actions {
    display: flex;
    gap: 0.5rem;
    white-space: nowrap;
}

.btn-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: var(--radius);
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    font-size: 0.875rem;
}

.btn-view {
    background: var(--gray-100);
    color: var(--info);
}

.btn-view:hover {
    background: #cffafe;
    color: #0e7490;
}

.btn-edit {
    background: var(--gray-100);
    color: var(--warning);
}

.btn-edit:hover {
    background: #fef3c7;
    color: #b45309;
}

.btn-delete {
    background: var(--gray-100);
    color: var(--danger);
}

.btn-delete:hover {
    background: #fee2e2;
    color: #b91c1c;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--gray-400);
}

.empty-state-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
}

.empty-state-text {
    font-size: 1rem;
    font-weight: 500;
}

/* Document Form Section */
.form-section {
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--gray-200);
    padding: 2rem;
    margin-top: 2rem;
    /* Marge ajoutÃ©e pour compenser la suppression du footer */
    margin-bottom: 4rem;
}

.form-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.form-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--gray-800);
    margin: 0;
}

.btn-toggle {
    background: var(--gray-100);
    color: var(--gray-700);
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    border: 1px solid var(--gray-300);
    cursor: pointer;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
}

.btn-toggle:hover {
    background: var(--gray-200);
    border-color: var(--gray-400);
}

.btn-toggle.active {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
}

#document-form {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 1200;
    background: rgba(15, 23, 42, 0.55);
    backdrop-filter: blur(2px);
    align-items: center;
    justify-content: center;
    padding: 1rem;
}

.form-content {
    width: 100%;
    max-width: 720px;
    max-height: calc(100vh - 2rem);
    overflow-y: auto;
    background: #ffffff;
    padding: 1.75rem;
    border-radius: 1rem;
    border: 1px solid var(--gray-200);
    box-shadow: var(--shadow-lg);
    animation: modalIn 0.22s ease-out;
    position: relative;
}

@keyframes modalIn {
    from {
        opacity: 0;
        transform: translateY(14px) scale(0.98);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.form-content h4 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    color: var(--gray-900);
}

.modal-close {
    position: absolute;
    top: 0.85rem;
    right: 0.85rem;
    width: 2rem;
    height: 2rem;
    border: 1px solid var(--gray-300);
    border-radius: 0.5rem;
    background: #fff;
    color: var(--gray-600);
    font-size: 1rem;
    line-height: 1;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.modal-close:hover {
    background: var(--gray-100);
    color: var(--gray-800);
}

.form-content label {
    display: block;
    margin-bottom: 0.4rem;
    color: var(--gray-700);
    font-weight: 600;
    font-size: 0.88rem;
}

.form-content input,
.form-content select,
.form-content textarea {
    width: 100%;
    border: 1px solid var(--gray-300);
    border-radius: 0.6rem;
    padding: 0.72rem 0.85rem;
    font-size: 0.9rem;
    color: var(--gray-800);
    background: #fff;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.form-content textarea {
    min-height: 110px;
    resize: vertical;
}

.form-content input:focus,
.form-content select:focus,
.form-content textarea:focus {
    border-color: var(--primary);
    outline: none;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.12);
}

.form-content > div {
    margin-bottom: 0.9rem;
}

/* Responsive */
@media (max-width: 1024px) {
    .cell-text {
        max-width: 150px;
    }
}

@media (max-width: 768px) {
    .page {
        /* Sur mobile : 6rem au lieu de 8rem */
        padding: 6rem 0.5rem 2rem;
    }
    
    .header-top {
        flex-direction: column;
    }
    
    .action-bar {
        width: 100%;
    }
    
    .btn {
        flex: 1;
        justify-content: center;
    }
    
    .section-header {
        padding: 1rem;
    }
    
    .table-container {
        padding: 0 1rem 1rem;
    }
    
    th, td {
        padding: 0.75rem 0.5rem;
        font-size: 0.8125rem;
    }
    
    .cell-text {
        max-width: 120px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
}
</style>

