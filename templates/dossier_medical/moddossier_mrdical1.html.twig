<script>
// Animation au scroll
const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
};

const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
        if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
        }
    });
}, observerOptions);

document.querySelectorAll('.form-section, .info-card').forEach(section => {
    section.style.opacity = '0';
    section.style.transform = 'translateY(20px)';
    section.style.transition = 'all 0.6s cubic-bezier(0.16, 1, 0.3, 1)';
    observer.observe(section);
});

// Auto-save indicator simulation
document.querySelectorAll('.form-control').forEach(input => {
    let timeout;
    input.addEventListener('input', () => {
        const indicator = document.querySelector('.status-indicator span:last-child');
        indicator.textContent = 'Sauvegarde automatique...';
        clearTimeout(timeout);
        timeout = setTimeout(() => {
            indicator.textContent = 'Modifications enregistr√©es';
            setTimeout(() => {
                indicator.textContent = 'Modifications en cours...';
            }, 2000);
        }, 1000);
    });
});
