                            <div class="item-label">üíä M√©dicaments</div>
                            <div class="item-value long {{ o.medicament ? '' : 'empty' }}">
                                {{ o.medicament|default('Non sp√©cifi√©')|nl2br }}
                            </div>
                        </div>
                        <div class="item-field full-width">
                            <div class="item-label">‚è∞ Posologie</div>
                            <div class="item-value long {{ o.posologie ? '' : 'empty' }}">
                                {{ o.posologie|default('Non sp√©cifi√©e')|nl2br }}
                            </div>
                        </div>
                        <div class="item-field">
                            <div class="item-label">‚ö†Ô∏è Instructions</div>
                            <div class="item-value long {{ o.instructions ? '' : 'empty' }}">
                                {{ o.instructions|default('‚Äî')|nl2br }}
                            </div>
                        </div>
                        <div class="item-field">
                            <div class="item-label">üìù Notes</div>
                            <div class="item-value long {{ o.notes ? '' : 'empty' }}">
                                {{ o.notes|default('‚Äî')|nl2br }}
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% endif %}
        </div>

    </div>

    <!-- FOOTER -->
    <footer class="report-footer">
        <div class="footer-line"></div>
        <div class="footer-text">Document g√©n√©r√© automatiquement ‚Ä¢ Confidentiel</div>
        <div class="footer-date">{{ "now"|date('d/m/Y √† H:i') }}</div>
    </footer>

</div>

</body>
</html>