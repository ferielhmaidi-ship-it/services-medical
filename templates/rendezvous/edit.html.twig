{% extends 'base.html.twig' %}

{% block title %}Edit Appointment - Tabibnet{% endblock %}

{% block body %}
<div class="page-title">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="heading-title">Edit Appointment</h1>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="appointment section">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-8">
        <h3 class="mb-4">Edit Your Appointment</h3>

        {% for message in app.flashes('error') %}
          <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        {% endfor %}

        {{ form_start(form) }}
          <div class="row">
            <div class="col-md-6 form-group">
              {{ form_row(form.patient) }}
            </div>
            <div class="col-md-6 form-group">
              {{ form_row(form.appointmentDate) }}
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 form-group">
              {{ form_row(form.doctor) }}
            </div>
            <div class="col-md-6 form-group">
              {{ form_row(form.message) }}
            </div>
          </div>

          <div class="mt-4 text-center">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="bi bi-check-circle me-2"></i>Update Appointment
            </button>
            <a href="{{ path('app_my_appointments') }}" class="btn btn-secondary btn-lg ms-2">
              <i class="bi bi-arrow-left me-2"></i>Back
            </a>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</section>
{% endblock %}
